        // Fast Results Counter
        function updateResultsCounter(totalResults) {
            const counter = document.getElementById('resultsCounter');
            if (totalResults > 0) {
                const startResult = (AppState.currentPage - 1) * 12 + 1;
                const endResult = Math.min(AppState.currentPage * 12, totalResults);
                counter.innerHTML = `
                    <div class="flex items-center justify-between">
                        <span>Showing ${startResult}-${endResult} of ${totalResults} products</span>
                        <span class="text-rc-success">
                            <i class="fas fa-check-circle mr-1"></i>
                            In stock & ready to ship
                        </span>
                    </div>
                `;
            } 
        }

        // Fast Event Listeners
        function initializeEventListeners() {
            // Filter interactions
            document.addEventListener('click', function (e) {
                if (e.target.classList.contains('filter-category')) {
                    e.preventDefault();
                    const category = e.target.dataset.category;
                    const isActive = AppState.selectedCategories.includes(category);
                    
                    if (isActive) {
                        AppState.selectedCategories = AppState.selectedCategories.filter(c => c !== category);
                        e.target.classList.remove('text-rc-red', 'font-semibold');
                    } else {
                        AppState.selectedCategories.push(category);
                        e.target.classList.add('text-rc-red', 'font-semibold');
                    }
                    AppState.currentPage = 1;
                    applyFilters();
                }
                
                if (e.target.classList.contains('filter-brand')) {
                    const brand = e.target.dataset.brand;
                    const isChecked = e.target.checked;
                    
                    if (isChecked) {
                        AppState.selectedBrands.push(brand);
                    } else {
                        AppState.selectedBrands = AppState.selectedBrands.filter(b => b !== brand);
                    }
                    AppState.currentPage = 1;
                    applyFilters();
                }
                
                if (e.target.classList.contains('filter-rating')) {
                    const rating = parseInt(e.target.dataset.rating);
                    const isChecked = e.target.checked;
                    
                    if (rating === 0) {
                        if (isChecked) {
                            AppState.selectedRatings = [];
                            document.querySelectorAll('.filter-rating:not([data-rating="0"])').forEach(cb => {
                                cb.checked = false;
                            });
                        }
                    } else {
                        document.querySelector('.filter-rating[data-rating="0"]').checked = false;
                        
                        if (isChecked) {
                            AppState.selectedRatings.push(rating);
                        } else {
                            AppState.selectedRatings = AppState.selectedRatings.filter(r => r !== rating);
                        }
                    }
                    AppState.currentPage = 1;
                    applyFilters();
                }
                
                if (e.target.classList.contains('filter-discount')) {
                    const discount = parseInt(e.target.dataset.discount);
                    const isChecked = e.target.checked;
                    
                    if (isChecked) {
                        AppState.selectedDiscounts.push(discount);
                    } else {
                        AppState.selectedDiscounts = AppState.selectedDiscounts.filter(d => d !== discount);
                    }
                    AppState.currentPage = 1;
                    applyFilters();
                }
                
                if (e.target.classList.contains('btn-add-cart')) {
                    e.preventDefault();
                    const id = e.target.getAttribute('data-id');
                    addToCart(id);
                }
            });

            // Sort change
            document.getElementById('sortOptions').addEventListener('change', (e) => {
                AppState.currentSort = e.target.value;
                AppState.currentPage = 1;
                applyFilters();
            });

            // Search functionality
            document.getElementById('searchInput').addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    searchProducts();
