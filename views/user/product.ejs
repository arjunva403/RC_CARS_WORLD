            // View toggle buttons
            document.getElementById('gridView').addEventListener('click', () => {
                document.getElementById('gridView').classList.add('bg-rc-red', 'text-white');
                document.getElementById('gridView').classList.remove('bg-rc-light-gray', 'text-rc-gray');
                document.getElementById('listView').classList.remove('bg-rc-red', 'text-white');
