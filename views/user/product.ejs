        // Fast Toast Notifications (No delays)
        function showToast(message, type = 'success') {
            const toastContainer = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            const iconClass = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-triangle';
            const bgClass = type === 'success' ? 'bg-rc-success' : 'bg-rc-error';
            
            toast.className = `flex items-center gap-3 px-6 py-4 mb-3 rounded-lg text-white font-medium shadow-lg ${bgClass}`;
            toast.innerHTML = `
                <i class="fas ${iconClass}"></i>
                <span class="flex-grow">${message}</span>
                <button class="text-white hover:text-gray-200 ml-4" onclick="this.parentElement.remove()" aria-label="Close notification">
                    <i class="fas fa-times"></i>
                </button>
            `;
            
            toastContainer.appendChild(toast);
            
            // Auto remove after 3 seconds (reduced from 5)
            setTimeout(() => toast.remove(), 3000);
        }

        // Instant Dropdown Toggle (No animations)
        function toggleDropdown(section) {
            const list = document.getElementById(`${section}-list`);
            const arrow = document.getElementById(`${section}-arrow`);
            const isHidden = list.classList.contains('hidden');
            
            list.classList.toggle('hidden');
            arrow.innerHTML = isHidden ? '&#9662;' : '&#9656;';
        }

        // Fast Price Range (No debouncing delays)
        function initializePriceRange() {
            const priceMin = document.getElementById('priceMin');
            const priceMax = document.getElementById('priceMax');
            const customMinPrice = document.getElementById('customMinPrice');
            const customMaxPrice = document.getElementById('customMaxPrice');
            const rangeTrack = document.getElementById('rangeTrack');
            const minValue = document.getElementById('minValue');
            const maxValue = document.getElementById('maxValue');

            function updateRangeSlider() {
                let min = parseInt(priceMin.value);
                let max = parseInt(priceMax.value);
                
                if (min > max) {
                    priceMin.value = max;
                    min = max;
                }
                if (max < min) {
                    priceMax.value = min;
                    max = min;
                }
                
                const minPercent = (min / 60000) * 100;
                const maxPercent = (max / 60000) * 100;
                
                rangeTrack.style.left = `${minPercent}%`;
                rangeTrack.style.width = `${maxPercent - minPercent}%`;
                
                minValue.textContent = `₹${min.toLocaleString()}`;
                maxValue.textContent = `₹${max.toLocaleString()}`;
                
                customMinPrice.value = min;
                customMaxPrice.value = max;
            }

            function updateCustomPriceRange() {
                let min = parseInt(customMinPrice.value) || 0;
                let max = parseInt(customMaxPrice.value) || 60000;
                
                min = Math.max(0, Math.min(min, 60000));
                max = Math.max(0, Math.min(max, 60000));
                
                if (min > max) {
                    customMinPrice.value = max;
                    min = max;
                }
                if (max < min) {
                    customMaxPrice.value = min;
                    max = min;
                }
                
                priceMin.value = min;
                priceMax.value = max;
                updateRangeSlider();
            }

            priceMin.addEventListener('input', updateRangeSlider);
            priceMax.addEventListener('input', updateRangeSlider);
            customMinPrice.addEventListener('change', updateCustomPriceRange);
            customMaxPrice.addEventListener('change', updateCustomPriceRange);

            updateRangeSlider();
        }

        // Instant Filter Application (No loading states)
        async function applyFilters() {
            const searchQuery = document.getElementById('searchInput').value.trim();
            const minPrice = parseInt(document.getElementById('priceMin').value);
            const maxPrice = parseInt(document.getElementById('priceMax').value);
            const sort = document.getElementById('sortOptions').value;
            
            const query = {
                searchQuery,
                selectedCategories: AppState.selectedCategories,
                selectedBrands: AppState.selectedBrands,
                selectedRatings: AppState.selectedRatings,
                selectedDiscounts: AppState.selectedDiscounts,
                sort,
                minPrice,
                maxPrice,
                currentPage: AppState.currentPage
            };

            try {
                const response = await fetch('/product', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(query)
                });

                if (!response.ok) throw new Error('Network response was not ok');
                
                const data = await response.json();
                renderProducts(data);
                updateResultsCounter(data.totalResults || 0);
                updateActiveFiltersDisplay();
                updatePagination(data.totalPages, AppState.currentPage);
                
            } catch (error) {
                console.error('Error loading products:', error);
                showToast('Failed to load products. Please try again.', 'error');
                document.getElementById('noResults').classList.remove('hidden');
            }
        }

        // Instant Product Rendering (No staggered animations)
        function renderProducts(data) {
            const products = data.productdata;
            const container = document.getElementById('productGrid');
            const noResults = document.getElementById('noResults');
            
            container.innerHTML = '';
            noResults.classList.add('hidden');

            if (!products || products.length === 0) {
                noResults.classList.remove('hidden');
                return;
            }

            AppState.totalResults = data.totalResults || products.length;

            // Render all products immediately
            products.forEach(product => {
                const productCard = createProductCard(product);
                container.appendChild(productCard);
            });
        }

        function createProductCard(product) {
    const card = document.createElement('div');
    card.className = 'product-card bg-white shadow-md rounded-lg p-4 relative overflow-hidden h-[420px] flex flex-col justify-between';
    
    // Use the correct price fields from your enriched data
    const baseprice = Number(product.baseprice) || 0;        // Original price (20000)
    const discountPrice = Number(product.discountPrice) || 0; // Store price (19000) 
    const finalPrice = Number(product.finalPrice) || discountPrice; // After offer price (9500)
    
    card.setAttribute('data-price', finalPrice);
    card.setAttribute('data-name', product.productName || '');


    const regularDiscountPercent = baseprice > discountPrice ? 
        Math.round(((baseprice - discountPrice) / baseprice) * 100) : 0;
    
    
    const offerDiscountPercent = Number(product.discountPercentage) || 0;
    const hasActiveOffer = product.applyOffer && product.offerTitle && finalPrice < discountPrice;

    const rating = Math.floor(Number(product.rating) || 3);
    const fullStars = '★'.repeat(Math.max(0, Math.min(5, rating)));
    const emptyStars = '☆'.repeat(Math.max(0, 5 - rating));
    
    // Safe image handling
    const imageUrl = (product.images && product.images.length > 0) ? 
        product.images[0] : '/static/img/placeholder.png';

    card.innerHTML = `
