                <i class="fas fa-heart text-sm"></i>
            </button>
            
    
            <!-- Special Offer Badge (Combined Title + Discount Percentage) -->
            ${hasActiveOffer ? `
                <div class="absolute ${regularDiscountPercent > 0 ? 'top-1' : 'top-2'} left-2 bg-gradient-to-r from-rc-red to-red-600 text-white text-xs px-3 py-2 rounded-lg font-bold z-10 animate-pulse shadow-lg">
                    <i class="fas fa-fire mr-1"></i>${product.offerTitle} • ${offerDiscountPercent}% OFF
                </div>
            ` : ''}
            
      
            
        
            
            <!-- Product Image -->
            <a href="/details/${product._id || ''}" class="block">
                <img src="${imageUrl}" alt="${product.productName || ''}" 
                     class="w-full h-48 object-contain mb-4 hover:scale-105 transition-transform duration-300"
                     onerror="this.src='/static/img/placeholder.png'">
            </a>
        </div>
        
        <!-- Product Info -->
        <div class="flex-grow">
            <h4 class="font-aldrich text-sm mb-2 line-clamp-2 hover:text-rc-red transition-colors">
                <a href="/details/${product._id || ''}">${product.productName || ''}</a>
            </h4>
            
            <!-- Rating -->
            <div class="flex items-center gap-2 mb-2">
                <div class="flex text-rc-yellow text-sm">
                    <span class="star-filled">${fullStars}</span>
                    <span class="star-empty text-rc-border-gray">${emptyStars}</span>
                </div>
                <span class="text-xs text-rc-gray">(${product.reviewCount || 0})</span>
            </div>
            
            <!-- Enhanced Price Display -->
            <div class="flex flex-col gap-1 mb-4">
                <div class="flex items-center gap-2 flex-wrap">
                    <!-- Show Final Price (after all discounts and offers) -->
                    <span class="font-bold text-lg text-rc-red">₹${finalPrice.toLocaleString()}</span>
                    
                    <!-- Show Original Price (struck through) if there's any discount -->
                    ${hasActiveOffer ? `
                        <span class="text-sm text-rc-gray line-through">₹${discountPrice.toLocaleString()}</span>
                        <span class="text-xs bg-rc-success text-white px-2 py-1 rounded-full font-bold animate-bounce">
                            Save ₹${(discountPrice - finalPrice).toLocaleString()}
                        </span>
                    ` : baseprice > discountPrice ? `
                        <span class="text-sm text-rc-gray line-through">₹${baseprice.toLocaleString()}</span>
                    ` : ''}
                </div>
                
                <!-- Special Offer Information -->
                ${hasActiveOffer ? `
                    <div class="text-xs text-rc-success font-semibold flex items-center">
                        <i class="fas fa-tag mr-1 animate-spin"></i>
                        Limited Time: ${product.offerTitle} - Extra ${offerDiscountPercent}% off!
                    </div>
                ` : ''}
            </div>
        </div>
        
        <!-- Action Button -->
                <button class="bg-rc-cyan text-white px-4 py-3 rounded-lg w-full hover:bg-rc-cyan/90 transition-all font-semibold btn-add-cart group" 
                        data-id="${product._id}" aria-label="Add to cart">
                    <i class="fas fa-shopping-cart mr-2 group-hover:scale-110 transition-transform"></i>
                    ADD TO CART
                </button>
        
    `;

    return card;
}

        // Instant Search (No delays)
        function searchProducts() {
            AppState.currentPage = 1;
            applyFilters();
        }

        function clearSearch() {
            document.getElementById('searchInput').value = '';
            AppState.currentPage = 1;
            applyFilters();
        }

        // Fast Filter Management
        function updateActiveFiltersDisplay() {
            const activeFilters = document.getElementById('activeFilters');
            const filterTags = document.getElementById('filterTags');
            
            filterTags.innerHTML = '';
            let hasActiveFilters = false;

            // Add category filters
            AppState.selectedCategories.forEach(categoryId => {
                const categoryElement = document.querySelector(`[data-category="${categoryId}"]`);
                if (categoryElement) {
                    hasActiveFilters = true;
                    const tag = createFilterTag(categoryElement.textContent, () => {
                        AppState.selectedCategories = AppState.selectedCategories.filter(c => c !== categoryId);
                        categoryElement.classList.remove('text-rc-red', 'font-semibold');
                        applyFilters();
                    });
                    filterTags.appendChild(tag);
                }
            });

            // Add brand filters
            AppState.selectedBrands.forEach(brandId => {
                const brandElement = document.querySelector(`[data-brand="${brandId}"]`);
                if (brandElement) {
                    hasActiveFilters = true;
                    const brandName = brandElement.closest('label').textContent.trim();
                    const tag = createFilterTag(brandName, () => {
                        AppState.selectedBrands = AppState.selectedBrands.filter(b => b !== brandId);
                        brandElement.checked = false;
                        applyFilters();
                    });
                    filterTags.appendChild(tag);
                }
            });

            activeFilters.classList.toggle('hidden', !hasActiveFilters);
        }

        function createFilterTag(text, onRemove) {
            const tag = document.createElement('span');
            tag.className = 'bg-rc-red text-white px-3 py-1 rounded-full text-xs flex items-center gap-2';
            tag.innerHTML = `
                ${text}
                <button onclick="this.parentElement.remove(); arguments[0].preventDefault();" class="hover:bg-white/20 rounded-full w-4 h-4 flex items-center justify-center">
                    <i class="fas fa-times text-xs"></i>
                </button>
            `;
            
            tag.querySelector('button').addEventListener('click', (e) => {
                e.preventDefault();
                onRemove();
            });
            
            return tag;
        }

        function clearAllFilters() {
            AppState.selectedCategories = [];
            AppState.selectedBrands = [];
            AppState.selectedRatings = [];
            AppState.selectedDiscounts = [];
            AppState.currentPage = 1;
            
            // Reset UI
            document.getElementById('searchInput').value = '';
            document.getElementById('sortOptions').value = 'default';
            document.getElementById('priceMin').value = 0;
            document.getElementById('priceMax').value = 60000;
            document.getElementById('customMinPrice').value = '';
            document.getElementById('customMaxPrice').value = '';
            
            // Uncheck all filters
            document.querySelectorAll('.filter-brand, .filter-rating, .filter-discount').forEach(cb => {
                cb.checked = false;
            });
            
            // Remove active styling from categories
            document.querySelectorAll('.filter-category').forEach(el => {
                el.classList.remove('text-rc-red', 'font-semibold');
