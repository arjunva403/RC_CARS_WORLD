                document.getElementById('productGrid').className = 'products grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6';
            });

            document.getElementById('listView').addEventListener('click', () => {
                document.getElementById('listView').classList.add('bg-rc-red', 'text-white');
                document.getElementById('listView').classList.remove('bg-rc-light-gray', 'text-rc-gray');
                document.getElementById('gridView').classList.remove('bg-rc-red', 'text-white');
                document.getElementById('gridView').classList.add('bg-rc-light-gray', 'text-rc-gray');
                
                document.getElementById('productGrid').className = 'products grid grid-cols-1 gap-4';
            });

            // Clear all filters button
            document.getElementById('clearAllFilters').addEventListener('click', clearAllFilters);
        }

        // Fast Pagination
        function updatePagination(totalPages, currentPageArg) {
            const pagination = document.querySelector('.pagination');
            pagination.innerHTML = '';
            
            if (totalPages <= 1) return;

            // Previous button
            const prevBtn = document.createElement('button');
            prevBtn.innerHTML = '<i class="fas fa-chevron-left mr-2"></i>Previous';
            prevBtn.className = `px-4 py-2 rounded-lg transition-colors ${currentPageArg === 1 ? 
                'bg-rc-light-gray text-rc-gray cursor-not-allowed' : 
                'bg-white border border-rc-border-gray text-rc-gray hover:bg-rc-light-gray'}`;
            prevBtn.disabled = currentPageArg === 1;
            prevBtn.addEventListener('click', () => {
                if (AppState.currentPage > 1) {
                    AppState.currentPage--;
                    applyFilters();
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                }
            });
            pagination.appendChild(prevBtn);

            // Page numbers
            const maxButtons = 5;
            let startPage = Math.max(1, currentPageArg - Math.floor(maxButtons / 2));
            let endPage = Math.min(totalPages, startPage + maxButtons - 1);
            
            if (endPage - startPage + 1 < maxButtons) {
                startPage = Math.max(1, endPage - maxButtons + 1);
            }

            for (let i = startPage; i <= endPage; i++) {
                const btn = document.createElement('button');
                btn.textContent = i;
                btn.className = `px-4 py-2 rounded-lg transition-colors ${i === currentPageArg ? 
                    'bg-rc-red text-white' : 
                    'bg-white border border-rc-border-gray text-rc-gray hover:bg-rc-light-gray'}`;
                btn.addEventListener('click', () => {
                    AppState.currentPage = i;
                    applyFilters();
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                });
                pagination.appendChild(btn);
            }

            // Next button
            const nextBtn = document.createElement('button');
            nextBtn.innerHTML = 'Next<i class="fas fa-chevron-right ml-2"></i>';
            nextBtn.className = `px-4 py-2 rounded-lg transition-colors ${currentPageArg === totalPages ? 
                'bg-rc-light-gray text-rc-gray cursor-not-allowed' : 
                'bg-white border border-rc-border-gray text-rc-gray hover:bg-rc-light-gray'}`;
            nextBtn.disabled = currentPageArg === totalPages;
            nextBtn.addEventListener('click', () => {
                if (AppState.currentPage < totalPages) {
                    AppState.currentPage++;
                    applyFilters();
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                }
            });
            pagination.appendChild(nextBtn);
        }

        // Fast Wishlist (No loading states)
        async function toggleWishlist(element) {
            const productId = element.querySelector('.product-id').value;
            const icon = element.querySelector('i');
            
            try {
                const res = await fetch('/addwish', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ productId })
                });
                
                const data = await res.json();
                
                if (data.success) {
                    element.classList.toggle('active');
                    if (element.classList.contains('active')) {
                        icon.className = 'fas fa-heart text-rc-red';
                        showToast('Added to wishlist!', 'success');
                    } else {
                        icon.className = 'far fa-heart';
                        showToast('Removed from wishlist', 'success');
                    }
                } else {
                    showToast(data.message || 'Please login to add to wishlist', 'error');
                }
            } catch (error) {
                console.error('Wishlist error:', error);
                showToast('Please login to add to wishlist', 'error');
            }
        }

        // Fast Add to Cart (Reduced loading time)
        async function addToCart(productId) {
            const button = document.querySelector(`[data-id="${productId}"]`);
            const originalContent = button.innerHTML;
            
            // Minimal loading state
            button.innerHTML = '<i class="fas fa-shopping-cart mr-2"></i>Adding...';
            button.disabled = true;
            
            try {
                const response = await fetch('/postcart', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ productId, qty: 1 })
                });
                
                const result = await response.json();
                
                if (response.ok && result.success) {
                    // Quick success feedback
                    button.innerHTML = '<i class="fas fa-check mr-2"></i>Added!';
                    button.classList.add('bg-rc-success');
                    
                    // Update cart badge
                    const cartBadge = document.querySelector('.cart-badge');
                    const currentCount = parseInt(cartBadge.textContent) || 0;
                    cartBadge.textContent = currentCount + 1;
                    
                    showToast('Product added to cart!', 'success');
                    
                    // Quick reset (reduced from 2000ms to 1000ms)
                    setTimeout(() => {
                        button.innerHTML = originalContent;
                        button.disabled = false;
                        button.classList.remove('bg-rc-success');
                    }, 1000);
                    
                } else {
                    throw new Error(result.fail || 'Failed to add to cart');
                }
                
            } catch (error) {
                console.error('Cart error:', error);
                showToast(error.fail || 'Out Of Stock', 'error');
                
                button.innerHTML = originalContent;
                button.disabled = false;
            }
        }

        // Initialize Application (No delays)
        document.addEventListener('DOMContentLoaded', () => {
            initializePriceRange();
            initializeEventListeners();
            applyFilters(); // Load products immediately
        });

        // Global functions for inline handlers
        window.toggleDropdown = toggleDropdown;
        window.searchProducts = searchProducts;
        window.clearSearch = clearSearch;
        window.applyFilters = applyFilters;
        window.toggleWishlist = toggleWishlist;
        window.clearAllFilters = clearAllFilters;
    </script>
