        <div class="flex items-center justify-center mb-6">
            <hr class="flex-grow border-rc-border-gray mx-4">
            <h3 class="text-2xl font-bold text-black font-aldrich">New Arrivals</h3>
            <hr class="flex-grow border-rc-border-gray mx-4">
        </div>
        <% if (newdata && newdata.length > 0) { %>
            <div class="relative">
                <div class="carousel-control prev absolute left-0 top-1/2 -translate-y-1/2 z-10 bg-black/50 rounded-full p-2.5 flex items-center justify-center cursor-pointer hover:bg-black/80 transition-colors"
                    id="new-prev">
                    <i class="fas fa-chevron-left text-white"></i>
                </div>
                <div class="product-carousel flex overflow-x-auto scroll-smooth gap-4 pb-4" id="new-arrivals-carousel">
                    <% newdata.forEach((Products) => { %>
                        <% if (Products.isListed !== false) { %>
                            <div class="product-card bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg flex-none w-64">
                                <div class="product-img-container h-48 flex items-center justify-center bg-gray-100 overflow-hidden">
                                    <a href="/details/<%= Products._id %>">
                                        <img src="<%= Products.images[0] %>" alt="<%= Products.productName %>"
                                            class="product-img max-h-full max-w-full w-44" loading="lazy">
                                    </a>
                                </div>
                                <div class="p-4">
                                    <div class="text-xs text-rc-gray mb-1">
                                        <%= Products.brandName || 'Brand' %>
                                    </div>
                                    <div class="text-sm font-aldrich font-medium mb-2 h-10 overflow-hidden line-clamp-2">
                                        <%= Products.productName %>
                                    </div>
                                    <div class="flex items-center mb-2">
                                        <% for(let i=0; i < 5; i++) { %>
                                            <svg class="w-4 h-4 <%= i < 4 ? 'fill-rc-yellow text-rc-yellow' : 'text-rc-border-gray' %>"
                                                viewBox="0 0 24 24">
                                                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                                            </svg>
                                        <% } %>
                                    </div>
                                    <div class="text-rc-red font-bold text-lg mb-3 font-aldrich">‚Çπ<%= Products.discountPrice %></div>
                                    <button class="w-full bg-rc-cyan hover:bg-rc-cyan/90 text-white py-2 rounded-md text-sm font-aldrich transition-colors"
                                        data-id="<%= Products._id %>">
                                        <i class="fas fa-shopping-cart mr-2"></i>Add to Cart
                                    </button>
                                </div>
                            </div>
                        <% } %>
                    <% }) %>
                </div>
                <div class="carousel-control next absolute right-0 top-1/2 -translate-y-1/2 z-10 bg-black/50 rounded-full p-2.5 flex items-center justify-center cursor-pointer hover:bg-black/80 transition-colors"
                    id="new-next">
                    <i class="fas fa-chevron-right text-white"></i>
                </div>
            </div>
        <% } else { %>
            <p class="text-center text-rc-gray">No new arrival products available.</p>
        <% } %>
    </section>

    <!-- Newsletter Section -->
    <section class="bg-rc-light-gray py-16">
        <div class="container mx-auto px-4">
            <div class="flex flex-col md:flex-row items-center justify-between gap-8">
                <div class="text-center md:text-left">
                    <h3 class="text-2xl font-bold text-black font-aldrich mb-2">SIGN UP FOR NEWSLETTERS</h3>
                    <p class="text-rc-gray text-lg">Stay updated with the latest offers and new arrivals!</p>
                </div>
                <div class="flex gap-2 w-full md:w-auto">
                    <input type="email" placeholder="Enter email..."
                        class="w-full md:w-80 px-6 py-3 border border-rc-border-gray rounded-md text-lg"
