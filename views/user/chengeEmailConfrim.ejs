                    <div class="text-3xl font-bold text-rc-red">mastercard</div>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // Global variables
        let countdown = 60;
        let timer;
        let timerCircle = document.getElementById('timerCircle');
        let timerText = document.getElementById('timerText');
        let timerMessage = document.getElementById('timerMessage');
        let resendLink = document.getElementById('resendLink');

        // Toast Notification Function
        function showToast(message, type = 'success') {
            const toastContainer = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `flex items-center gap-2 px-5 py-3 mb-3 rounded-lg text-white font-medium shadow-lg opacity-0 transform -translate-y-5 transition-all duration-300 ${type === 'success' ? 'bg-rc-success' : 'bg-rc-error'}`;
            toast.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                ${message}
                <button class="ml-auto text-white text-lg" onclick="this.parentElement.remove()">×</button>
            `;
            toastContainer.appendChild(toast);
            requestAnimationFrame(() => toast.classList.add('opacity-100', 'translate-y-0'));
            setTimeout(() => {
                toast.classList.remove('opacity-100', 'translate-y-0');
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        // Show Error Function with Input Reset
        function showError(message) {
            const errorDiv = document.getElementById('error');
            const errorMessage = document.getElementById('error-message');
            const inputs = document.querySelectorAll('.otp-input');
            const dots = document.querySelectorAll('.progress-dot');
            
            errorMessage.textContent = message;
            errorDiv.classList.remove('hidden');
            
            // Clear all inputs and add error styling
            inputs.forEach((input, index) => {
                input.value = '';
                input.classList.add('error');
                setTimeout(() => input.classList.remove('error'), 1000);
            });
            
            // Reset progress dots
            dots.forEach(dot => dot.classList.remove('filled'));
            
            // Focus first input
            setTimeout(() => inputs[0].focus(), 500);
            
            // Update hidden input
            document.getElementById('otp').value = '';
            
            // Scroll to error
            errorDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            // Auto-hide after 5 seconds
            setTimeout(() => {
                errorDiv.classList.add('hidden');
            }, 5000);
        }

        // Timer Functions
        function updateTimer() {
            countdown--;
            timerText.textContent = countdown;
            
            // Update circle progress
            const circumference = 377;
            const offset = circumference - (countdown / 60) * circumference;
            timerCircle.style.strokeDashoffset = offset;
            
            if (countdown <= 0) {
                clearInterval(timer);
                timerMessage.textContent = "Didn't receive the code?";
                timerText.textContent = "0";
                resendLink.disabled = false;
                resendLink.classList.remove("cursor-not-allowed", "opacity-50");
                resendLink.classList.add("hover:underline");
            } else {
                timerMessage.textContent = `Resend OTP in ${countdown}s`;
            }
        }

        function startTimer() {
            countdown = 60;
            timerText.textContent = countdown;
            timerMessage.textContent = `Resend OTP in 60s`;
            resendLink.disabled = true;
            resendLink.classList.add("cursor-not-allowed", "opacity-50");
            resendLink.classList.remove("hover:underline");
            
            // Reset circle
            timerCircle.style.strokeDashoffset = 0;
            
            timer = setInterval(updateTimer, 1000);
        }

        // Enhanced OTP Input Handling with Auto-Submit[1]
        function setupOTPInputs() {
            const inputs = document.querySelectorAll('.otp-input');
            const hiddenInput = document.getElementById('otp');
            const dots = document.querySelectorAll('.progress-dot');

            inputs.forEach((input, index) => {
                // Handle input with auto-submit
                input.addEventListener('input', function(e) {
                    const value = e.target.value;
                    
                    // Only allow numbers
                    if (!/^[0-9]$/.test(value)) {
                        e.target.value = '';
                        // Add shake animation for invalid input
                        e.target.classList.add('error');
                        setTimeout(() => e.target.classList.remove('error'), 300);
                        return;
                    }

                    // Move to next input
                    if (value && index < inputs.length - 1) {
                        inputs[index + 1].focus();
                    }

                    updateHiddenInput();
                });

                // Handle keydown
                input.addEventListener('keydown', function(e) {
                    // Handle backspace
                    if (e.key === 'Backspace' && !e.target.value && index > 0) {
                        inputs[index - 1].focus();
                        inputs[index - 1].value = '';
                        updateHiddenInput();
                    }
                });

                // Handle paste[2]
                input.addEventListener('paste', function(e) {
                    e.preventDefault();
                    const paste = e.clipboardData.getData('text');
                    const digits = paste.replace(/\D/g, '').split('').slice(0, 6);
                    
                    digits.forEach((digit, i) => {
                        if (inputs[i]) {
                            inputs[i].value = digit;
                        }
                    });
                    
                    // Focus last filled input or next empty
                    const lastIndex = Math.min(digits.length - 1, inputs.length - 1);
                    inputs[lastIndex].focus();
                    
                    updateHiddenInput();
                });

                // Handle focus
                input.addEventListener('focus', function(e) {
                    e.target.select();
                });
            });

            function updateHiddenInput() {
                const otp = Array.from(inputs).map(input => input.value).join('');
                hiddenInput.value = otp;
                
                // Hide error when user starts typing
                if (otp.length > 0) {
                    document.getElementById('error').classList.add('hidden');
                }

                // Update progress dots and input styling
                inputs.forEach((input, index) => {
                    const dot = dots[index];
                    if (input.value) {
                        input.classList.add('border-green-500', 'bg-green-50');
                        input.classList.remove('border-rc-border-gray');
                        dot.classList.add('filled');
                    } else {
                        input.classList.remove('border-green-500', 'bg-green-50');
                        input.classList.add('border-rc-border-gray');
                        dot.classList.remove('filled');
                    }
                });

                // Auto-submit when all digits are filled
                if (otp.length === 6 && /^\d{6}$/.test(otp)) {
                    setTimeout(() => {
                        document.getElementById('verifysignotp').dispatchEvent(new Event('submit'));
                    }, 500); // Small delay for better UX
                }
            }
        }

        // Resend OTP Handler[3]
        resendLink.addEventListener("click", async function () {
            if (!resendLink.disabled) {
                startTimer();
                
                try {
                    await Swal.fire({
                        icon: 'success',
                        title: 'New Code Sent!',
                        text: 'A new verification code has been sent to your new email address.',
                        showConfirmButton: false,
                        timer: 2000,
                        customClass: {
                            title: 'font-aldrich',
                            content: 'font-aldrich'
                        }
                    });

                    const response = await fetch("/chengeConfrimEmailOTPverifyResendOTP", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({
                            resendotp: true
                        }),
                    });

                    const data = await response.json();
                    if (data.fail) {
                        showError(data.fail);
                    }
                } catch (error) {
                    console.error('Error:', error);
                    showError('Failed to resend OTP. Please try again.');
                }
            }
        });

        // Form Submission Handler
        document.getElementById("verifysignotp").addEventListener("submit", async (e) => {
            e.preventDefault();
            
            const otp = document.getElementById("otp").value;
            const verifyBtn = document.getElementById("verifyBtn");
            const verifyText = document.getElementById("verifyText");
            const originalText = verifyText.textContent;

            // Validate OTP
            if (!otp || otp.length !== 6) {
                showError('Please enter the complete 6-digit verification code');
                return;
            }

            if (!/^\d{6}$/.test(otp)) {
                showError('Please enter a valid 6-digit verification code');
                return;
            }

            // Show loading state
            verifyBtn.disabled = true;
            verifyText.textContent = 'Completing...';
            verifyBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Completing Email Change...';

            try {
                const response = await fetch("/chengeEmailConfrimVerify", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({
                        enterotp: otp,
                    }),
                });

                const data = await response.json();
                
                if (data.success) {
                    // Clear the timer
                    clearInterval(timer);
                    
                    await Swal.fire({
                        title: "Email Changed Successfully!",
                        text: "Your email address has been updated successfully. You can now use your new email to access your account.",
                        icon: "success",
                        confirmButtonText: "Continue to Profile",
                        confirmButtonColor: '#df2f2f',
                        customClass: {
                            title: 'font-aldrich',
                            content: 'font-aldrich'
                        }
                    });
                    
                    window.location.href = "/profile";
                } else if (data.fail) {
                    showError(data.fail);
                }
            } catch (error) {
                console.error('Error:', error);
                showError('Network error. Please check your connection and try again.');
            } finally {
                // Reset button state
                verifyBtn.disabled = false;
                verifyText.textContent = originalText;
                verifyBtn.innerHTML = '<i class="fas fa-check-circle mr-2"></i>' + originalText;
            }
        });

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            setupOTPInputs();
            startTimer();
            
            // Add entrance animations
            const formSections = document.querySelectorAll('.form-section');
            formSections.forEach((section, index) => {
                setTimeout(() => {
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }, index * 150);
            });

            // Focus first input
            setTimeout(() => {
                document.querySelector('.otp-input').focus();
            }, 500);
        });
    </script>
</body>
