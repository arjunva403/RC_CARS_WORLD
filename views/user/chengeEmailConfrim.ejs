        .timer-circle {
            animation: countdown 60s linear;
        }
        @keyframes countdown {
            from { stroke-dashoffset: 0; }
            to { stroke-dashoffset: 377; }
        }
        .progress-dot {
            transition: all 0.3s ease;
        }
        .progress-dot.filled {
            background-color: #10b981;
            transform: scale(1.2);
        }
        @media (max-width: 640px) {
            .otp-input {
                width: 2.5rem;
                height: 2.5rem;
