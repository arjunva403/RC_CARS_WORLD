    <script>
        // Store original values for reset functionality
        const originalValues = {
            name: "<%= address.name %>",
            phoneNumber: "<%= address.phoneNumber %>",
            altPhoneNumber: "<%= address.altPhoneNumber || '' %>",
            pincode: "<%= address.pincode %>",
            locality: "<%= address.locality %>",
            houseNo: "<%= address.houseNo %>",
            landMark: "<%= address.landMark || '' %>",
            state: "<%= address.state %>",
            city: "<%= address.city %>",
            addressType: "<%= address.addressType %>"
        };

        // Toast Notification Function
        function showToast(message, type = 'success') {
            const toastContainer = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `flex items-center gap-2 px-5 py-3 mb-3 rounded-lg text-white font-medium shadow-lg opacity-0 transform -translate-y-5 transition-all duration-300 ${type === 'success' ? 'bg-rc-success' : 'bg-rc-error'}`;
            toast.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                ${message}
                <button class="ml-auto text-white text-lg" onclick="this.parentElement.remove()">Ã—</button>
            `;
            toastContainer.appendChild(toast);
            requestAnimationFrame(() => toast.classList.add('opacity-100', 'translate-y-0'));
            setTimeout(() => {
                toast.classList.remove('opacity-100', 'translate-y-0');
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        // Show Error Function
        function showError(message) {
            const errorDiv = document.getElementById('error');
            const errorMessage = document.getElementById('error-message');
            errorMessage.textContent = message;
            errorDiv.classList.remove('hidden');
            
            // Hide success message if shown
            document.getElementById('success').classList.add('hidden');
            
            // Scroll to error
            errorDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            // Auto-hide after 5 seconds
            setTimeout(() => {
                errorDiv.classList.add('hidden');
            }, 5000);
        }

        // Show Success Function
        function showSuccess(message) {
            const successDiv = document.getElementById('success');
            const successMessage = document.getElementById('success-message');
            successMessage.textContent = message;
            successDiv.classList.remove('hidden');
            
            // Hide error message if shown
            document.getElementById('error').classList.add('hidden');
            
            // Auto-hide after 3 seconds
            setTimeout(() => {
                successDiv.classList.add('hidden');
            }, 3000);
        }

        // Progress Bar Update
        function updateProgress() {
            const form = document.getElementById('addressForm');
            const inputs = form.querySelectorAll('input[required], select[required]');
            const radioGroups = form.querySelectorAll('input[type="radio"][required]');
            
            let filledCount = 0;
            let totalCount = inputs.length;
            
            // Check regular inputs
            inputs.forEach(input => {
                if (input.type !== 'radio' && input.value.trim() !== '') {
                    filledCount++;
                } else if (input.type === 'radio' && input.checked) {
                    // Handle radio buttons separately to avoid counting duplicates
                    const radioName = input.name;
                    if (!document.querySelector(`input[name="${radioName}"][data-counted]`)) {
                        input.setAttribute('data-counted', 'true');
                        filledCount++;
                    }
                }
            });
            
            // Reset radio counting attributes
            setTimeout(() => {
                document.querySelectorAll('input[type="radio"][data-counted]').forEach(input => {
                    input.removeAttribute('data-counted');
                });
            }, 100);
            
            const percentage = Math.round((filledCount / totalCount) * 100);
            const progressBar = document.getElementById('progress-bar');
            const progressText = document.getElementById('progress-text');
            
            progressBar.style.width = `${percentage}%`;
            progressText.textContent = `${percentage}% Complete`;
        }

        // Form Validation
        function validateForm() {
            const name = document.getElementById("name").value.trim();
            const phone = document.getElementById("phone").value.trim();
            const pin = document.getElementById("pin").value.trim();
            const locality = document.getElementById("locality").value.trim();
            const houseNo = document.getElementById("houseNo").value.trim();
            const state = document.getElementById("state").value;
            const city = document.getElementById("city").value.trim();
            const addressType = document.querySelector('input[name="addressType"]:checked');

            // Validate required fields
            if (!name) {
                showError('Please enter your full name');
                return false;
            }

            if (!phone) {
                showError('Please enter your phone number');
                return false;
            }

            if (!/^[0-9]{10}$/.test(phone)) {
                showError('Please enter a valid 10-digit phone number');
                return false;
            }

            if (!pin) {
                showError('Please enter pincode');
                return false;
            }

            if (!/^[0-9]{6}$/.test(pin)) {
                showError('Please enter a valid 6-digit pincode');
                return false;
            }

            if (!locality) {
                showError('Please enter locality/area');
                return false;
            }

            if (!houseNo) {
                showError('Please enter house number/building');
                return false;
            }

            if (!state) {
                showError('Please select a state');
                return false;
            }

            if (!city) {
                showError('Please enter city');
                return false;
            }

            if (!addressType) {
                showError('Please select an address type');
                return false;
            }

            // Validate alternate phone if provided
            const altPhone = document.getElementById("altPhone").value.trim();
            if (altPhone && !/^[0-9]{10}$/.test(altPhone)) {
                showError('Please enter a valid 10-digit alternate phone number');
                return false;
            }

            return true;
        }

        // Save Address Function
        async function saveAddress() {
            if (!validateForm()) return;

            const saveBtn = document.getElementById('saveBtn');
            const saveText = document.getElementById('saveText');
            const originalText = saveText.textContent;

            // Show loading state
            saveBtn.disabled = true;
            saveText.textContent = 'Updating...';
            saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Updating Address...';

            const formData = {
                name: document.getElementById("name").value.trim(),
                phoneNumber: document.getElementById("phone").value.trim(),
                altPhoneNumber: document.getElementById("altPhone").value.trim(),
                pincode: document.getElementById("pin").value.trim(),
                locality: document.getElementById("locality").value.trim(),
                houseNo: document.getElementById("houseNo").value.trim(),
                landMark: document.getElementById("landMark").value.trim(),
                state: document.getElementById("state").value,
                city: document.getElementById("city").value.trim(),
                addressType: document.querySelector('input[name="addressType"]:checked').value
            };

            try {
                const response = await fetch(`/postedit/<%= address._id %>`, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();

                if (data.success) {
                    showSuccess('Address updated successfully!');
                    showToast('Address updated successfully!', 'success');
                    setTimeout(() => {
                        window.location.href = "/manageadd";
                    }, 1500);
                } else {
                    showError(data.error || 'Something went wrong while updating the address');
                }
            } catch (error) {
                console.error("Error:", error);
                showError('Network error. Please check your connection and try again.');
            } finally {
                // Reset button state
                saveBtn.disabled = false;
                saveText.textContent = originalText;
                saveBtn.innerHTML = '<i class="fas fa-save mr-2"></i>' + originalText;
            }
        }

        // Reset Form Function
        function resetForm() {
            if (confirm('Are you sure you want to reset all changes? This will restore the original address details.')) {
                // Reset form values to original
                document.getElementById('name').value = originalValues.name;
                document.getElementById('phone').value = originalValues.phoneNumber;
                document.getElementById('altPhone').value = originalValues.altPhoneNumber;
                document.getElementById('pin').value = originalValues.pincode;
                document.getElementById('locality').value = originalValues.locality;
                document.getElementById('houseNo').value = originalValues.houseNo;
                document.getElementById('landMark').value = originalValues.landMark;
                document.getElementById('state').value = originalValues.state;
                document.getElementById('city').value = originalValues.city;
                
                // Reset radio buttons
                document.querySelectorAll('input[name="addressType"]').forEach(input => {
                    input.checked = input.value === originalValues.addressType;
                    input.parentElement.classList.remove('selected');
                    if (input.checked) {
                        input.parentElement.classList.add('selected');
                    }
                });
                
                // Hide messages
                document.getElementById('error').classList.add('hidden');
                document.getElementById('success').classList.add('hidden');
                
                updateProgress();
                showToast('Form reset to original values', 'success');
            }
        }

        // Radio Button Styling
        function setupRadioButtons() {
            document.querySelectorAll('input[name="addressType"]').forEach(input => {
                input.addEventListener('change', function() {
                    // Reset all radio button styles
                    document.querySelectorAll('input[name="addressType"]').forEach(radio => {
                        radio.parentElement.classList.remove('selected');
                    });
                    
                    // Style selected radio button
                    if (this.checked) {
                        this.parentElement.classList.add('selected');
                    }
                    
                    updateProgress();
                });
            });
        }

        // Event Listeners
        document.addEventListener('DOMContentLoaded', function() {
            // Setup radio buttons
            setupRadioButtons();
            
            // Set initial radio button styling
            document.querySelectorAll('input[name="addressType"]').forEach(input => {
                if (input.checked) {
                    input.parentElement.classList.add('selected');
                }
            });
            
            // Progress tracking
            document.querySelectorAll('input, select').forEach(input => {
                input.addEventListener('input', updateProgress);
                input.addEventListener('change', updateProgress);
            });

            // Save button
            document.getElementById('saveBtn').addEventListener('click', saveAddress);
            
            // Reset button
            document.getElementById('resetBtn').addEventListener('click', resetForm);
            
            // Initial progress update
            updateProgress();

            // Add input formatting
            const phoneInputs = document.querySelectorAll('#phone, #altPhone');
            phoneInputs.forEach(input => {
                input.addEventListener('input', function(e) {
                    e.target.value = e.target.value.replace(/\D/g, '').substring(0, 10);
                });
            });

            const pinInput = document.getElementById('pin');
            pinInput.addEventListener('input', function(e) {
                e.target.value = e.target.value.replace(/\D/g, '').substring(0, 6);
            });

            // Auto-hide error on input
            document.querySelectorAll('input, select').forEach(input => {
                input.addEventListener('focus', function() {
                    document.getElementById('error').classList.add('hidden');
                    document.getElementById('success').classList.add('hidden');
                });
            });

            // Form entrance animations
            const formSteps = document.querySelectorAll('.form-step');
            formSteps.forEach((step, index) => {
                setTimeout(() => {
                    step.style.animationDelay = `${index * 0.1}s`;
                    step.style.opacity = '0';
                    step.style.transform = 'translateY(20px)';
                    step.style.animation = 'fadeInUp 0.5s ease forwards';
                }, index * 100);
            });
        });
    </script>
