                                class="bg-white text-rc-cyan px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors shadow-lg"
                                id="addMoneyBtn">
                                <i class="fas fa-plus mr-2"></i>Add Money
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <% let totalCredits=0; let totalDebits=0; let transactionCount=0; if (wallet?.transactions) {
                    transactionCount=wallet.transactions.length; wallet.transactions.forEach(transaction=> {
                    if (transaction.type === 'credit') {
                    totalCredits += transaction.amount;
                    } else {
                    totalDebits += transaction.amount;
                    }
                    });
                    }
                    %>

                    <div class="bg-green-50 border-l-4 border-green-400 p-4 rounded-lg">
                        <div class="flex items-center">
                            <i class="fas fa-arrow-up text-green-500 text-xl mr-3"></i>
                            <div>
                                <p class="text-green-600 text-sm font-medium">Total Credits</p>
                                <p class="text-2xl font-bold text-green-700">‚Çπ<%= totalCredits.toLocaleString() %>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded-lg">
                        <div class="flex items-center">
                            <i class="fas fa-arrow-down text-red-500 text-xl mr-3"></i>
                            <div>
                                <p class="text-red-600 text-sm font-medium">Total Debits</p>
                                <p class="text-2xl font-bold text-red-700">‚Çπ<%= totalDebits.toLocaleString() %>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="bg-blue-50 border-l-4 border-blue-400 p-4 rounded-lg">
                        <div class="flex items-center">
                            <i class="fas fa-exchange-alt text-blue-500 text-xl mr-3"></i>
                            <div>
                                <p class="text-blue-600 text-sm font-medium">Total Transactions</p>
                                <p class="text-2xl font-bold text-blue-700">
                                    <%= transactionCount %>
                                </p>
                            </div>
                        </div>
                    </div>
            </div>

            <!-- Transaction History -->
            <div class="bg-white border border-rc-border-gray rounded-lg overflow-hidden">
                <div class="bg-rc-light-gray px-6 py-4 border-b border-rc-border-gray">
                    <h3 class="text-lg font-semibold font-aldrich">Recent Transactions</h3>
                </div>

                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-gray-50">
                            <tr>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-rc-gray uppercase tracking-wider">
                                    Date & Time</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-rc-gray uppercase tracking-wider">
                                    Transaction Details</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-rc-gray uppercase tracking-wider">
                                    Type</th>
                                <th
                                    class="px-6 py-3 text-left text-xs font-medium text-rc-gray uppercase tracking-wider">
                                    Amount</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% if (wallet?.transactions && wallet.transactions.length> 0) { %>
                                <% wallet.transactions.slice().reverse().forEach((element, index)=> { %>
                                    <tr class="transaction-row">
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm font-medium text-gray-900">
                                                <%= new Date(element.date).toLocaleDateString('en-IN', { day: '2-digit'
