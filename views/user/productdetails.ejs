        // Enhanced Carousel with Touch Support
        function scrollCarousel(carouselId, scrollAmount) {
            const carousel = document.getElementById(carouselId);
            carousel.scrollBy({ 
                left: scrollAmount, 
                behavior: 'smooth' 
            });
        }

        // Touch/Drag Support for Carousel
        document.addEventListener('DOMContentLoaded', () => {
            const carousel = document.getElementById('relatedCarousel');
            if (!carousel) return;
            
            let isDragging = false;
            let startX, scrollLeft;
            let startTime, endTime;

            // Mouse events
            carousel.addEventListener('mousedown', startDrag);
            carousel.addEventListener('mousemove', drag);
            carousel.addEventListener('mouseup', endDrag);
            carousel.addEventListener('mouseleave', endDrag);

            // Touch events
            carousel.addEventListener('touchstart', startDrag);
            carousel.addEventListener('touchmove', drag);
            carousel.addEventListener('touchend', endDrag);

            function startDrag(e) {
                isDragging = true;
                startTime = Date.now();
                carousel.style.cursor = 'grabbing';
                carousel.style.userSelect = 'none';
                
                const touch = e.touches ? e.touches[0] : e;
                startX = touch.pageX - carousel.offsetLeft;
                scrollLeft = carousel.scrollLeft;
            }

            function drag(e) {
                if (!isDragging) return;
                e.preventDefault();
                
                const touch = e.touches ? e.touches[0] : e;
                const x = touch.pageX - carousel.offsetLeft;
                const walk = (x - startX) * 2; // Multiply for faster scroll
                carousel.scrollLeft = scrollLeft - walk;
            }

            function endDrag() {
                if (!isDragging) return;
                
                isDragging = false;
                endTime = Date.now();
                carousel.style.cursor = 'grab';
                carousel.style.userSelect = '';
                
                // Add momentum scrolling for quick swipes
                const timeDiff = endTime - startTime;
                if (timeDiff < 200) { // Quick swipe
                    const momentum = (scrollLeft - carousel.scrollLeft) * 2;
                    carousel.scrollBy({ left: momentum, behavior: 'smooth' });
                }
            }

            // Prevent clicks during drag
            carousel.addEventListener('click', (e) => {
                if (Math.abs(scrollLeft - carousel.scrollLeft) > 5) {
                    e.preventDefault();
                    e.stopPropagation();
                }
            });
        });

        // Auto-scroll carousel on mobile
        document.addEventListener('DOMContentLoaded', () => {
            const carousel = document.getElementById('relatedCarousel');
            if (carousel && window.innerWidth < 768) {
                setInterval(() => {
                    if (carousel.scrollLeft >= carousel.scrollWidth - carousel.clientWidth) {
                        carousel.scrollTo({ left: 0, behavior: 'smooth' });
                    } else {
                        carousel.scrollBy({ left: 300, behavior: 'smooth' });
                    }
                }, 5000);
            }
        });

        // Quick add to cart for similar products
        function addToCart(productId) {
            fetch("/postcart", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ productId, qty: 1 })
            })
            .then(res => res.json())
            .then(result => {
                if (result.success) {
                    showToast("Product added to cart!", 'success');
                    const cartBadge = document.querySelector('.cart-badge');
                    cartBadge.textContent = parseInt(cartBadge.textContent || 0) + 1;
                } else {
                    showToast(result.message || "Failed to add to cart", 'error');
                }
            })
            .catch(err => {
                showToast("Please login to add items to cart", 'error');
            });
        }

        // Keyboard navigation
        document.addEventListener('keydown', (e) => {
            const carousel = document.getElementById('relatedCarousel');
            if (carousel && document.activeElement === carousel) {
                if (e.key === 'ArrowLeft') {
                    scrollCarousel('relatedCarousel', -300);
                } else if (e.key === 'ArrowRight') {
                    scrollCarousel('relatedCarousel', 300);
                }
            }
        });

        // Lazy loading for images
        document.addEventListener('DOMContentLoaded', () => {
            const images = document.querySelectorAll('img[data-src]');
            const imageObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const img = entry.target;
                        img.src = img.dataset.src;
                        img.classList.remove('opacity-50');
                        imageObserver.unobserve(img);
                    }
                });
            });

            images.forEach(img => imageObserver.observe(img));
        });
    </script>
