        // Enhanced Toast Notification System
        function showToast(message, type = 'success') {
            const toastContainer = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            const iconSvg = type === 'success' 
                ? '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>'
                : '<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M6 18L18 6M6 6l12 12"/></svg>';
            
            toast.className = `flex items-center gap-3 px-6 py-4 mb-3 rounded-lg text-white font-medium shadow-lg 
                              transform translate-x-full transition-all duration-300 toast-animation
                              ${type === 'success' ? 'bg-rc-success' : 'bg-rc-error'}`;
            toast.innerHTML = `
                ${iconSvg}
                <span class="flex-1">${message}</span>
                <button class="ml-3 text-white hover:text-gray-200 text-xl font-bold" onclick="this.parentElement.remove()">×</button>
            `;
            
            toastContainer.appendChild(toast);
            
            // Trigger animation
            setTimeout(() => {
                toast.classList.remove('translate-x-full');
                toast.classList.add('translate-x-0');
            }, 100);
            
            // Auto remove after 4 seconds
            setTimeout(() => {
                toast.classList.add('translate-x-full');
                setTimeout(() => toast.remove(), 300);
            }, 4000);
        }

        // Enhanced Image Management
        function changeImage(src) {
            const image = document.getElementById('productImage');
            image.style.opacity = '0.5';
            
            setTimeout(() => {
                image.src = src;
                image.style.opacity = '1';
            }, 150);
            
            // Update thumbnails
            document.querySelectorAll('.thumbnail').forEach(thumb => {
                thumb.classList.remove('border-rc-red', 'shadow-md');
                if (thumb.src === src) {
                    thumb.classList.add('border-rc-red', 'shadow-md');
                }
            });
        }

        // Enhanced Image Zoom with Mobile Support
        document.addEventListener('DOMContentLoaded', () => {
            const imageContainer = document.querySelector('.image-container');
            const productImage = document.getElementById('productImage');
            let isZoomed = false;

            if (imageContainer && productImage) {
                // Desktop hover zoom
                imageContainer.addEventListener('mousemove', (e) => {
                    if (window.innerWidth >= 768) {
                        const rect = imageContainer.getBoundingClientRect();
                        const x = e.clientX - rect.left;
                        const y = e.clientY - rect.top;
                        const xPercent = (x / rect.width) * 100;
                        const yPercent = (y / rect.height) * 100;
                        
                        productImage.style.transform = 'scale(1.8)';
                        productImage.style.transformOrigin = `${xPercent}% ${yPercent}%`;
                        isZoomed = true;
                    }
                });

                imageContainer.addEventListener('mouseleave', () => {
                    if (window.innerWidth >= 768) {
                        productImage.style.transform = 'scale(1)';
                        productImage.style.transformOrigin = 'center center';
                        isZoomed = false;
                    }
                });

                // Mobile tap to zoom
                imageContainer.addEventListener('click', (e) => {
                    if (window.innerWidth < 768) {
                        e.preventDefault();
                        if (!isZoomed) {
                            productImage.style.transform = 'scale(1.5)';
                            isZoomed = true;
                        } else {
                            productImage.style.transform = 'scale(1)';
                            productImage.style.transformOrigin = 'center center';
                            isZoomed = false;
                        }
                    }
                });
            }
        });

        // Enhanced Coupon System
        function applyCoupon() {
            const code = document.getElementById('couponCode').value.trim().toUpperCase();
            const message = document.getElementById('couponMessage');
            
            const validCoupons = {
                'SAVE10': { discount: 10, message: 'Coupon applied! 10% off your order' },
                'WELCOME20': { discount: 20, message: 'Welcome! 20% off for new customers' },
                'RCWORLD15': { discount: 15, message: 'RC World Special! 15% off' }
            };

            if (validCoupons[code]) {
                message.textContent = validCoupons[code].message;
                message.className = 'text-rc-success mt-2 block font-semibold';
                showToast(`Coupon applied! ${validCoupons[code].discount}% discount added`, 'success');
            } else if (code === '') {
                message.textContent = 'Please enter a coupon code';
                message.className = 'text-rc-error mt-2 block';
            } else {
                message.textContent = 'Invalid coupon code. Try SAVE10, WELCOME20, or RCWORLD15';
                message.className = 'text-rc-error mt-2 block';
                showToast('Invalid coupon code', 'error');
            }
        }

        // Enhanced Add to Cart with Loading State
        document.querySelectorAll("form.add-to-cart-form").forEach(form => {
            form.addEventListener("submit", async (e) => {
                e.preventDefault();
                const button = e.submitter;
                const productId = button.dataset.id;
                const qty = parseInt(document.getElementById("quantity").value);
                const originalText = button.innerHTML;

                if (qty < 1 || qty > 15) {
                    showToast('Please select a valid quantity (1-15).', 'error');
                    return;
                }

                // Show loading state
                button.disabled = true;
                button.innerHTML = `
                    <svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white inline" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    Adding...
                `;

                try {
                    const res = await fetch("/postcart", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ productId, qty })
                    });

                    const result = await res.json();
                    
                    if (res.ok && result.success) {
                        showToast(`${qty} item(s) added to cart successfully!`, 'success');
                        
                        // Update cart badge with animation
                        const cartBadge = document.querySelector('.cart-badge');
                        const currentCount = parseInt(cartBadge.textContent || 0);
                        cartBadge.textContent = currentCount + qty;
                        cartBadge.classList.add('animate-bounce');
                        setTimeout(() => cartBadge.classList.remove('animate-bounce'), 500);
                    } else {
                        showToast(result.message || "Failed to add to cart", 'error');
                    }
                } catch (err) {
                    console.error("Add to cart failed:", err);
                    showToast("Something went wrong. Please try again.", 'error');
                } finally {
                    // Restore button state
                    button.disabled = false;
                    button.innerHTML = originalText;
                }
            });
        });

        // Enhanced Buy Now
        function buyNow(productId) {
            const quantity = parseInt(document.getElementById('quantity').value);
            if (quantity < 1 || quantity > 15) {
                showToast('Please select a valid quantity (1-15).', 'error');
                return;
            }
            
            showToast(`Proceeding to checkout with ${quantity} item(s)!`, 'success');
            
            // Simulate redirect to checkout
            setTimeout(() => {
                window.location.href = `/checkout?product=${productId}&qty=${quantity}`;
            }, 1000);
        }

        // Enhanced Review System
        function toggleCommentForm() {
            const form = document.getElementById('commentForm');
            form.classList.toggle('hidden');
            
            if (!form.classList.contains('hidden')) {
                form.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }
        }

        // Star Rating for Reviews
        document.addEventListener('DOMContentLoaded', () => {
            const starButtons = document.querySelectorAll('.star-btn');
            let selectedRating = 0;
            
            starButtons.forEach((star, index) => {
                star.addEventListener('click', () => {
                    selectedRating = index + 1;
                    updateStarDisplay();
                });
                
                star.addEventListener('mouseover', () => {
                    highlightStars(index + 1);
                });
            });
            
            function updateStarDisplay() {
                starButtons.forEach((star, index) => {
                    star.classList.toggle('text-rc-star-filled', index < selectedRating);
                    star.classList.toggle('text-rc-star-empty', index >= selectedRating);
                });
            }
            
            function highlightStars(rating) {
                starButtons.forEach((star, index) => {
                    star.classList.toggle('text-rc-star-filled', index < rating);
                    star.classList.toggle('text-rc-star-empty', index >= rating);
                });
            }
        });

        function submitReview() {
            const textarea = document.querySelector('.comment-form textarea');
            const selectedRating = document.querySelectorAll('.star-btn.text-rc-star-filled').length;
            
            if (!selectedRating) {
                showToast('Please select a rating before submitting.', 'error');
                return;
            }
            
            if (textarea.value.trim()) {
                showToast('Review submitted successfully! Thank you for your feedback.', 'success');
                textarea.value = '';
                document.getElementById('commentForm').classList.add('hidden');
                
                // Reset stars
                document.querySelectorAll('.star-btn').forEach(star => {
                    star.classList.remove('text-rc-star-filled');
                    star.classList.add('text-rc-star-empty');
                });
            } else {
                showToast('Please enter a review before submitting.', 'error');
            }
        }

