    <!-- Cart Section -->
   <main class="container mx-auto px-4 py-8">
    <h2 class="text-2xl font-semibold mb-8">Your Cart</h2>
    <% if (!cart || cart.items.length === 0) { %>
        <div class="bg-white p-12 text-center rounded-lg shadow-md">
            <i class="fas fa-shopping-cart text-5xl text-rc-gray mb-4"></i>
            <h3 class="text-xl font-semibold mb-2">Your cart is empty</h3>
            <p class="text-rc-gray mb-6">Looks like you haven't added anything to your cart yet</p>
            <a href="/product">
                <button class="bg-rc-red text-white py-3 px-6 rounded-md font-semibold hover:bg-rc-dark-red transition-colors">Continue Shopping</button>
            </a>
        </div>
    <% } else { %>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Cart Items -->
            <div class="lg:col-span-2 space-y-4">
                <% cart.items.forEach(element => { %>
                    <div class="cart-item bg-white p-4 flex items-center rounded-lg shadow-md">
                        <img src="<%= element.productId.images[0] %>" alt="<%= element.productId.productName %>" class="w-24 h-24 object-cover rounded-md mr-4">
                        <div class="flex-1">
                            <h4 class="text-lg font-medium mb-2"><%= element.productId.productName %></h4>
                            
                            <!-- Enhanced Price Display with Offers -->
                            <div class="price-info mb-2">
                                <% if (element.applyOffer) { %>
                                    <!-- Show offer information -->
                                    <div class="offer-badge bg-red-500 text-white text-xs px-2 py-1 rounded-full inline-block mb-1">
                                        <i class="fas fa-fire mr-1"></i><%= element.offerTitle %>
                                    </div>
                                    <div class="price-display flex items-center gap-2">
                                        <span class="text-lg font-bold text-red-600">₹<%= element.finalPrice.toLocaleString() %></span>
                                        <span class="text-sm text-gray-500 line-through">₹<%= element.originalPrice.toLocaleString() %></span>
                                        <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded">
                                            Save ₹<%= (element.originalPrice - element.finalPrice).toLocaleString() %>
                                        </span>
                                    </div>
                                    <p class="text-xs text-green-600 mt-1">
                                        <i class="fas fa-tag mr-1"></i><%= element.discountPercentage %>% off with <%= element.offerSource %> offer!
                                    </p>
                                <% } else { %>
                                    <!-- No offer, show regular price -->
                                    <p class="text-sm text-rc-gray mb-2">Price: ₹<%= element.productId.discountPrice.toLocaleString() %></p>
                                <% } %>
                            </div>
                            
                            <div class="flex items-center gap-2 mb-2">
                                <button class="bg-rc-red text-white w-8 h-8 rounded-full flex items-center justify-center hover:bg-rc-dark-red transition-colors" onclick="qtyupdated(-1, '<%= element.productId._id %>')">-</button>
                                <span class="text-sm font-medium"><%= element.quantity %></span>
                                <button class="bg-rc-red text-white w-8 h-8 rounded-full flex items-center justify-center hover:bg-rc-dark-red transition-colors" onclick="qtyupdated(1, '<%= element.productId._id %>')">+</button>
                                <span class="text-sm text-rc-error" id="err-<%= element.productId._id %>"></span>
                            </div>
                            <p class="text-sm text-rc-success">Stock: <%= element.productId.stock %></p>
                            <button class="flex items-center gap-1 mt-2 bg-white border border-rc-red text-rc-red py-2 px-3 rounded-md font-medium hover:bg-rc-red hover:text-white transition-colors" onclick="removeFromCart('<%= element.productId._id %>')">
                                <i class="fa fa-trash"></i> Remove
                            </button>
                        </div>
                        
                        <!-- Enhanced Total Display -->
                        <div class="text-right">
                            <% if (element.applyOffer) { %>
                                <!-- Show savings in item total -->
                                <div class="text-lg font-bold text-red-600">₹<%= element.finalItemTotal.toLocaleString() %></div>
                                <div class="text-sm text-gray-500 line-through">₹<%= element.originalItemTotal.toLocaleString() %></div>
                                <div class="text-xs text-green-600 font-medium">
                                    You Save: ₹<%= element.itemSavings.toLocaleString() %>
                                </div>
                            <% } else { %>
                                <!-- No offer, show regular total -->
                                <div class="text-lg font-bold">₹<%= (element.productId.discountPrice * element.quantity).toLocaleString() %></div>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
            
            <!-- Cart Summary Section -->
            <div class="lg:col-span-1">
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-lg font-semibold mb-4">Order Summary</h3>
                    
                    <!-- Enhanced Summary with Offer Information -->
                    <div class="space-y-3 mb-4">
                        <% if (typeof subtotalOriginal !== 'undefined' && subtotalOriginal > subtotal) { %>
                            <!-- Show original subtotal if offers are applied -->
                            <div class="flex justify-between text-sm">
                                <span>Original Subtotal:</span>
                                <span class="line-through text-gray-500">₹<%= subtotalOriginal.toLocaleString() %></span>
                            </div>
                            <div class="flex justify-between text-sm text-green-600 font-medium">
                                <span>Offer Savings:</span>
                                <span>-₹<%= totalSavings.toLocaleString() %></span>
                            </div>
                        <% } %>
                        
                        <div class="flex justify-between">
                            <span>Subtotal (<%= totalItems %> items):</span>
                            <span class="font-medium">₹<%= subtotal.toLocaleString() %></span>
                        </div>
                        
                        <div class="flex justify-between">
                            <span>Delivery Charge:</span>
                            <span class="<%= deliveryCharge === 0 ? 'text-green-600' : '' %>">
                                <% if (deliveryCharge === 0) { %>
                                    FREE
                                <% } else { %>
                                    ₹<%= deliveryCharge %>
                                <% } %>
                            </span>
                        </div>
                        
                        <% if (discountAmount > 0) { %>
                            <div class="flex justify-between text-green-600">
                                <span>Additional Discount:</span>
                                <span>-₹<%= discountAmount.toLocaleString() %></span>
                            </div>
                        <% } %>
                    </div>
                    
                    <hr class="mb-4">
                    
                    <div class="flex justify-between text-xl font-bold mb-6">
                        <span>Total:</span>
                        <span class="text-red-600">₹<%= finalTotal.toLocaleString() %></span>
                    </div>
                    
                    <!-- Total Savings Summary -->
                    <% if (typeof totalSavings !== 'undefined' && totalSavings > 0) { %>
                        <div class="bg-green-50 border border-green-200 rounded-lg p-3 mb-4">
                            <div class="flex items-center text-green-800">
                                <i class="fas fa-check-circle mr-2"></i>
                                <span class="font-medium">You're saving ₹<%= totalSavings.toLocaleString() %> with offers!</span>
                            </div>
                        </div>
                    <% } %>
                    <a href="/checkout">
                              <button class="w-full bg-rc-red text-white py-3 rounded-md font-semibold hover:bg-rc-dark-red transition-colors">
                        Proceed to Checkout
                    </button>
                        </a>
                </div>
            </div>
        </div>
    <% } %>
</main>


