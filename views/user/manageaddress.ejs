            </nav>
        </aside>

        <!-- Right Content - Manage Addresses -->
        <section class="flex-grow bg-white shadow-md rounded-lg p-6 md:p-8">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
                <h2 class="text-2xl font-bold font-aldrich mb-4 md:mb-0">Manage Addresses</h2>
                <div class="flex items-center space-x-4 text-sm text-rc-gray">
                    <span><i class="fas fa-map-marker-alt mr-1"></i>Total Addresses: <%= address ? address.reduce((total, doc) => total + (doc.address ? doc.address.length : 0), 0) : 0 %></span>
                </div>
            </div>

            <!-- Error Message -->
            <div id="span" class="hidden text-rc-error mb-4 p-3 bg-rc-error/10 rounded-lg border border-rc-error/20"></div>

            <% if (!address || address.length === 0 || address.every(doc => !doc.address || doc.address.length === 0)) { %>
                <!-- Empty State -->
                <div class="text-center py-16">
                    <div class="w-24 h-24 bg-rc-light-gray rounded-full flex items-center justify-center mx-auto mb-6">
                        <i class="fas fa-map-marker-alt text-3xl text-rc-gray"></i>
                    </div>
                    <h3 class="text-xl font-semibold mb-2 text-rc-gray">No Addresses Added</h3>
                    <p class="text-rc-gray mb-6">Add your delivery addresses to make checkout faster and easier!</p>
                    <a href="/addaddress" class="bg-rc-red text-white py-3 px-6 rounded-md font-semibold hover:bg-rc-red/90 transition-colors">
                        <i class="fas fa-plus mr-2"></i>Add Your First Address
                    </a>
                </div>
            <% } else { %>
                <!-- Address Cards -->
                <div class="space-y-6">
                    <% address.forEach(addressDoc => { %>
                        <% addressDoc.address.forEach(element => { %>
                            <div class="address-card border border-rc-border-gray rounded-lg p-6 bg-white">
                                <!-- Address Header -->
                                <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4 pb-4 border-b border-rc-border-gray">
                                    <div class="flex items-center space-x-3 mb-2 md:mb-0">
                                        <div class="w-8 h-8 bg-rc-red/10 rounded-full flex items-center justify-center">
                                            <i class="fas fa-<%= element.addressType.toLowerCase() === 'home' ? 'home' : element.addressType.toLowerCase() === 'work' ? 'briefcase' : 'map-marker-alt' %> text-rc-red text-sm"></i>
                                        </div>
                                        <h3 class="text-lg font-semibold text-black"><%= element.addressType %> Address</h3>
                                    </div>
                                    <div class="flex items-center space-x-2">
                                        <span class="text-xs bg-rc-success/10 text-rc-success px-2 py-1 rounded-full">
                                            <i class="fas fa-check-circle mr-1"></i>Active
                                        </span>
                                    </div>
                                </div>

                                <!-- Address Details Grid -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                                    <div class="space-y-3">
                                        <div class="flex items-start space-x-3">
                                            <i class="fas fa-user text-rc-gray mt-1"></i>
                                            <div>
                                                <p class="font-medium text-black"><%= element.name %></p>
                                                <p class="text-sm text-rc-gray">Recipient Name</p>
                                            </div>
                                        </div>
                                        
                                        <div class="flex items-start space-x-3">
                                            <i class="fas fa-phone text-rc-gray mt-1"></i>
                                            <div>
                                                <p class="font-medium text-black">+91 <%= element.phoneNumber %></p>
                                                <p class="text-sm text-rc-gray">Contact Number</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="space-y-3">
                                        <div class="flex items-start space-x-3">
                                            <i class="fas fa-map-marker-alt text-rc-gray mt-1"></i>
                                            <div>
                                                <p class="font-medium text-black">
                                                    <%= element.houseNo %>, <%= element.locality %>
                                                </p>
                                                <p class="text-black">
                                                    <%= element.city %>, <%= element.state %> - <%= element.pincode %>
                                                </p>
                                                <% if (element.landMark && element.landMark.trim() !== '') { %>
                                                    <p class="text-sm text-rc-gray">
                                                        <i class="fas fa-landmark mr-1"></i>
                                                        Landmark: <%= element.landMark %>
                                                    </p>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Address Actions -->
                                <div class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-4 border-t border-rc-border-gray">
                                    <div class="flex items-center space-x-2">
                                        <span class="text-sm text-rc-gray">
                                            <i class="fas fa-clock mr-1"></i>
                                            Default delivery address
                                        </span>
                                    </div>
                                    
                                    <div class="flex gap-3">
                                        <a href="/editeaddress/<%= element._id %>" class="bg-rc-cyan text-white py-2 px-4 rounded-md font-semibold hover:bg-rc-cyan/90 transition-colors">
                                            <i class="fas fa-edit mr-1"></i>Edit
                                        </a>
                                        <button onclick="confirmDelete('<%= element._id %>')" class="bg-rc-error text-white py-2 px-4 rounded-md font-semibold hover:bg-rc-error/90 transition-colors">
                                            <i class="fas fa-trash mr-1"></i>Delete
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    <% }) %>
                </div>

                <!-- Add New Address Button -->
                <div class="mt-8 text-center">
                    <a href="/addaddress" class="bg-rc-red text-white py-3 px-6 rounded-md font-semibold hover:bg-rc-red/90 transition-colors inline-flex items-center">
                        <i class="fas fa-plus mr-2"></i>Add New Address
                    </a>
                </div>
            <% } %>
        </section>
    </main>

