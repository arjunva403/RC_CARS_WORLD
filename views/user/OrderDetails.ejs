    <!-- JavaScript Functions -->
    <script>
        // Global variables
        let selectedItemData = null;

        // Toast Notification Function
        function showToast(message, type = 'success') {
            const toastContainer = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `flex items-center gap-2 px-5 py-3 mb-3 rounded-lg text-white font-medium shadow-lg opacity-0 transform -translate-y-5 transition-all duration-300 ${type === 'success' ? 'bg-rc-success' : 'bg-rc-error'}`;
            toast.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                ${message}
                <button class="ml-auto text-white text-lg" onclick="this.parentElement.remove()">×</button>
            `;
            toastContainer.appendChild(toast);
            requestAnimationFrame(() => toast.classList.add('opacity-100', 'translate-y-0'));
            setTimeout(() => {
                toast.classList.remove('opacity-100', 'translate-y-0');
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        // Modal Functions with Quantity Support
        function openReturnModal(itemId, maxQuantity) {
            selectedItemData = {
                itemId: itemId,
                maxQuantity: maxQuantity,
                type: 'individual'
            };
            
            // Set up quantity input
            const quantityInput = document.getElementById('returnQuantity');
            const maxQtySpan = document.getElementById('maxReturnQty');
            quantityInput.max = maxQuantity;
            quantityInput.value = Math.min(1, maxQuantity);
            maxQtySpan.textContent = maxQuantity;
            
            const modal = document.getElementById('returnModal');
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
            setTimeout(() => document.getElementById('returnReason').focus(), 300);
        }

        function openCancelModal(itemId, maxQuantity) {
            selectedItemData = {
                itemId: itemId,
                maxQuantity: maxQuantity,
                type: 'individual'
            };
            
            // Set up quantity input
            const quantityInput = document.getElementById('cancelQuantity');
            const maxQtySpan = document.getElementById('maxCancelQty');
            quantityInput.max = maxQuantity;
            quantityInput.value = Math.min(1, maxQuantity);
            maxQtySpan.textContent = maxQuantity;
            
            const modal = document.getElementById('cancelModal');
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
            setTimeout(() => document.getElementById('cancelReason').focus(), 300);
        }

        function openBulkReturnModal() {
            selectedItemData = { type: 'bulk' };
            const modal = document.getElementById('bulkReturnModal');
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
            setTimeout(() => document.getElementById('bulkReturnReason').focus(), 300);
        }

        function openBulkCancelModal() {
            selectedItemData = { type: 'bulk' };
            const modal = document.getElementById('bulkCancelModal');
            modal.classList.remove('hidden');
            document.body.style.overflow = 'hidden';
            setTimeout(() => document.getElementById('bulkCancelReason').focus(), 300);
        }

        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.classList.add('hidden');
            document.body.style.overflow = 'auto';

            // Clear form data
            if (modalId === 'returnModal') {
                document.getElementById('returnReason').value = '';
                document.getElementById('returnQuantity').value = '1';
            } else if (modalId === 'cancelModal') {
                document.getElementById('cancelReason').value = '';
                document.getElementById('cancelQuantity').value = '1';
            } else if (modalId === 'bulkReturnModal') {
                document.getElementById('bulkReturnReason').value = '';
            } else if (modalId === 'bulkCancelModal') {
                document.getElementById('bulkCancelReason').value = '';
            }
            
            selectedItemData = null;
        }

        // Submit Functions with Enhanced Validation
        async function submitReturn() {
            if (!selectedItemData) {
                showToast('No item selected for return', 'error');
                return;
            }

            const reason = document.getElementById('returnReason').value.trim();
            
            if (reason === '') {
                showToast('Please provide a reason for return', 'error');
                return;
            }
            if (reason.length < 10) {
                showToast('Please provide a more detailed reason (minimum 10 characters)', 'error');
                return;
            }

            let requestData = {
                orderId: '<%= order._id %>',
                reason: reason,
                type: selectedItemData.type
            };

            if (selectedItemData.type === 'individual') {
                const returnQuantity = parseInt(document.getElementById('returnQuantity').value) || 1;
                
                if (returnQuantity <= 0 || returnQuantity > selectedItemData.maxQuantity) {
                    showToast(`Invalid quantity. Please enter between 1 and ${selectedItemData.maxQuantity}`, 'error');
                    return;
                }

                requestData.itemId = selectedItemData.itemId;
                requestData.returnQuantity = returnQuantity;
            }

            try {
                const response = await fetch('/orderReturn', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(requestData)
                });

                const data = await response.json();
                if (data.success) {
                    showToast(data.message || 'Return request submitted successfully!', 'success');
                    setTimeout(() => location.reload(), 2000);
                } else {
                    showToast(data.message || 'Something went wrong while submitting the return request', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('Network error. Please check your connection and try again.', 'error');
            }

            closeModal('returnModal');
        }

        async function submitCancel() {
            if (!selectedItemData) {
                showToast('No item selected for cancellation', 'error');
                return;
            }

            const reason = document.getElementById('cancelReason').value.trim();
            
            if (reason === '') {
                showToast('Please provide a reason for cancellation', 'error');
                return;
            }
            if (reason.length < 10) {
                showToast('Please provide a more detailed reason (minimum 10 characters)', 'error');
                return;
            }

            let requestData = {
                orderId: '<%= order._id %>',
                reason: reason,
                type: selectedItemData.type
            };

            if (selectedItemData.type === 'individual') {
                const cancelQuantity = parseInt(document.getElementById('cancelQuantity').value) || 1;
                
                if (cancelQuantity <= 0 || cancelQuantity > selectedItemData.maxQuantity) {
                    showToast(`Invalid quantity. Please enter between 1 and ${selectedItemData.maxQuantity}`, 'error');
                    return;
                }

                requestData.itemId = selectedItemData.itemId;
                requestData.cancelQuantity = cancelQuantity;
            }

            try {
                const response = await fetch('/orderCancellation', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(requestData)
