    <script>
        // Toast Notification Function
        function showToast(message, type = 'success') {
            const toastContainer = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `flex items-center gap-2 px-5 py-3 mb-3 rounded-lg text-white font-medium shadow-lg opacity-0 transform -translate-y-5 transition-all duration-300 ${type === 'success' ? 'bg-rc-success' : 'bg-rc-error'}`;
            toast.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                ${message}
                <button class="ml-auto text-white text-lg" onclick="this.parentElement.remove()">Ã—</button>
            `;
            toastContainer.appendChild(toast);
            requestAnimationFrame(() => toast.classList.add('opacity-100', 'translate-y-0'));
            setTimeout(() => {
                toast.classList.remove('opacity-100', 'translate-y-0');
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        // Show Error Function
        function showError(message) {
            const errorDiv = document.getElementById('error');
            const errorMessage = document.getElementById('error-message');
            errorMessage.textContent = message;
            errorDiv.classList.remove('hidden');
            
            // Scroll to error
            errorDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            // Auto-hide after 5 seconds
            setTimeout(() => {
                errorDiv.classList.add('hidden');
            }, 5000);
        }

        // Input validation functions
        function isValidEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }

        function isValidPhone(phone) {
            const phoneRegex = /^[6-9]\d{9}$/;
            return phoneRegex.test(phone);
        }

        function validateInput(value) {
            if (!value.trim()) {
                showError('Please enter an email address or phone number');
                return false;
            }

            const isEmail = value.includes('@');
            
            if (isEmail) {
                if (!isValidEmail(value)) {
                    showError('Please enter a valid email address');
                    return false;
                }
            } else {
                const cleanPhone = value.replace(/\D/g, '');
                if (!isValidPhone(cleanPhone)) {
                    showError('Please enter a valid 10-digit Indian mobile number');
                    return false;
                }
            }

            return true;
        }

        // Form submission handler
        document.getElementById("verifyemail").addEventListener("submit", async (e) => {
            e.preventDefault();
            
            const contact = document.getElementById("contact").value.trim();
            const submitBtn = document.getElementById("submitBtn");
            const submitText = document.getElementById("submitText");
            const originalText = submitText.textContent;

            // Validate input
            if (!validateInput(contact)) {
                return;
            }

            // Show loading state
            submitBtn.disabled = true;
            submitText.textContent = 'Sending...';
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Sending Verification Code...';

            try {
                const response = await fetch("/chengeemail", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json"
                    },
                    body: JSON.stringify({
                        email: contact,
                    })
                });

                const data = await response.json();
                console.log(data);

                if (data.success) {
                    // Show success message with SweetAlert2
                    await Swal.fire({
                        icon: 'success',
                        title: 'Verification Code Sent!',
                        text: `We've sent a verification code to ${contact}. Please check and enter the code to complete the email change.`,
                        confirmButtonText: 'Continue',
                        confirmButtonColor: '#df2f2f',
                        showConfirmButton: true,
                        timer: 5000,
                        timerProgressBar: true,
                        customClass: {
                            title: 'font-aldrich',
                            content: 'font-aldrich'
                        }
                    });

                    // Redirect to OTP page
                    window.location.href = "/chengeEmailOTP";
                }

                if (data.fail) {
                    showError(data.fail);
                }
            } catch (error) {
                console.error('Error:', error);
                showError('Network error. Please check your connection and try again.');
            } finally {
                // Reset button state
                submitBtn.disabled = false;
                submitText.textContent = originalText;
                submitBtn.innerHTML = '<i class="fas fa-paper-plane mr-2"></i>' + originalText;
            }
        });

        // Real-time input validation and formatting
        document.getElementById('contact').addEventListener('input', function(e) {
            const value = e.target.value;
            
            // Hide error when user starts typing
            document.getElementById('error').classList.add('hidden');
            
            // Auto-detect and update placeholder
            if (value.includes('@')) {
                e.target.placeholder = 'Enter your email address (e.g., user@example.com)';
                document.querySelector('input[value="email"]').checked = true;
                updateRadioStyles();
            } else if (/^\d+$/.test(value)) {
                e.target.placeholder = 'Enter 10-digit mobile number (e.g., 9876543210)';
                document.querySelector('input[value="phone"]').checked = true;
                updateRadioStyles();
            }
        });

        // Radio button styling
        function updateRadioStyles() {
            document.querySelectorAll('input[name="contactType"]').forEach(radio => {
                const container = radio.parentElement;
                const dot = container.querySelector('div > div');
                
                if (radio.checked) {
                    container.querySelector('div').classList.remove('border-rc-border-gray');
                    container.querySelector('div').classList.add('border-rc-cyan');
                    dot.classList.remove('bg-transparent');
                    dot.classList.add('bg-rc-cyan');
                } else {
                    container.querySelector('div').classList.remove('border-rc-cyan');
                    container.querySelector('div').classList.add('border-rc-border-gray');
                    dot.classList.remove('bg-rc-cyan');
                    dot.classList.add('bg-transparent');
                }
            });
        }

        // Radio button change handlers
        document.querySelectorAll('input[name="contactType"]').forEach(radio => {
            radio.addEventListener('change', function() {
                const contactInput = document.getElementById('contact');
                
                if (this.value === 'email') {
                    contactInput.placeholder = 'Enter your email address (e.g., user@example.com)';
                    contactInput.type = 'email';
                } else {
                    contactInput.placeholder = 'Enter 10-digit mobile number (e.g., 9876543210)';
                    contactInput.type = 'tel';
                }
                
                updateRadioStyles();
                contactInput.focus();
            });
        });

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateRadioStyles();
            
            // Add entrance animations
            const formSections = document.querySelectorAll('.form-section');
            formSections.forEach((section, index) => {
                setTimeout(() => {
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });
    </script>
</body>
</html>
