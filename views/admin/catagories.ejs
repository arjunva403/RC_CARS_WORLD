        <p class="page-subtitle">Create, edit, and manage product categories for your RC World store</p>
      </div>

      <!-- Enhanced Controls Section -->
      <section class="controls-section">
        <div class="top-controls">
          <div class="search-section">
            <form action="/category" method="get" class="d-flex gap-2 w-100">
              <input id="searchval" type="text" name="searchQuery" class="form-control search-input" 
                     placeholder="Search categories..." value="<%= searchQuery %>" />
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-search"></i>
                Search
              </button>
              <a href="/category" class="btn btn-secondary">
                <i class="fas fa-times"></i>
                Clear
              </a>
            </form>
          </div>
          <button class="btn btn-primary" onclick="showModal('addModal')">
            <i class="fas fa-plus"></i>
            Add Category
          </button>
        </div>
      </section>

      <!-- Enhanced Table Section -->
      <section class="table-section">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">
                  <i class="fas fa-tag me-2"></i>
                  Category Name
                </th>
                <th scope="col">
                  <i class="fas fa-eye me-2"></i>
                  Status
                </th>
                <th scope="col">
                  <i class="fas fa-cogs me-2"></i>
                  Actions
                </th>
              </tr>
            </thead>
            <tbody>
              <% if (categories && categories.length > 0) { %>
                <% categories.forEach(category => { %>
                  <tr>
                    <td class="fw-medium">
                      <%= category.categoryName %>
                    </td>
                    <td>
                      <span class="status-badge <%= category.visibility === 'active' ? 'status-active' : 'status-inactive' %>">
                        <i class="fas fa-circle me-1" style="font-size: 0.5rem;"></i>
                        <%= category.visibility %>
                      </span>
                    </td>
                    <td>
                      <div class="btn-group" role="group">
                        <button class="btn btn-edit btn-sm"
                          onclick="showModal('editModal', '<%= category._id %>', '<%= category.categoryName %>')">
                          <i class="fas fa-edit"></i>
                          Edit
                        </button>
                        <button class="btn <%= category.visibility === 'active' ? 'btn-unlist' : 'btn-list' %> btn-sm"
                          onclick="categorylist('<%= category._id %>')">
                          <i class="fas fa-<%= category.visibility === 'active' ? 'eye-slash' : 'eye' %>"></i>
                          <%= category.visibility === 'active' ? 'Unlist' : 'List' %>
                        </button>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="3" class="empty-state">
                    <i class="fas fa-folder-open"></i>
                    <h5>No categories found</h5>
                    <p class="mb-0">Start by adding your first category</p>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Enhanced Pagination -->
        <% if (totalpage > 1) { %>
          <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
              <% for (let i = 1; i <= totalpage; i++) { %>
                <li class="page-item <%= page === i ? 'active' : '' %>">
                  <a class="page-link" href="/category?page=<%= i %>&searchQuery=<%= encodeURIComponent(searchQuery) %>">
                    <%= i %>
                  </a>
                </li>
              <% } %>
            </ul>
          </nav>
        <% } %>
      </section>
    </div>
