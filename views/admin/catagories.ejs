  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script>
    function showModal(id, categoryId, categoryName) {
      const modal = document.getElementById(id);
      modal.style.display = 'flex';
      if (id === 'editModal') {
        document.getElementById('edit').value = categoryName;
        document.getElementById('catId').value = categoryId;
      }
    }

    function closeModal(id) {
      document.getElementById(id).style.display = 'none';
    }

    window.onclick = function (event) {
      const modals = document.querySelectorAll('.modal');
      modals.forEach(modal => {
        if (event.target === modal) {
          modal.style.display = 'none';
        }
      });
    };

    document.getElementById('addcategory').addEventListener('submit', async e => {
      e.preventDefault();
      const addname = document.getElementById('addname').value;
      try {
        const response = await fetch('/postcategory', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ addname }),
        });
        const data = await response.json();
        if (data.success) {
          Swal.fire({
            title: 'Success!',
            text: 'Added New Category.',
            icon: 'success',
            confirmButtonText: 'OK',
            confirmButtonColor: '#e74c3c'
          }).then(() => {
            window.location.href = '/category';
          });
