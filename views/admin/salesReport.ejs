            Export Report
          </button>
        </div>
      </section>

      <!-- Enhanced Table Section -->
      <section class="table-section">
        <div class="table-header">
          <h3 class="table-title">
            <i class="fas fa-table"></i>
            Sales Transactions
          </h3>
        </div>

        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th><i class="fas fa-box me-2"></i>Product Name</th>
                <th><i class="fas fa-hashtag me-2"></i>Product ID</th>
                <th><i class="fas fa-rupee-sign me-2"></i>Price</th>
                <th><i class="fas fa-tag me-2"></i>Category</th>
                <th><i class="fas fa-trademark"></i>Brand</th>
                <th><i class="fas fa-sort-numeric-up me-2"></i>Qty</th>
                <th><i class="fas fa-receipt me-2"></i>Order ID</th>
                <th><i class="fas fa-calendar me-2"></i>Date</th>
                <th><i class="fas fa-map-marker-alt me-2"></i>Location</th>
                <th><i class="fas fa-user me-2"></i>Customer</th>
                <th><i class="fas fa-calculator me-2"></i>Total</th>
                <th><i class="fas fa-info-circle me-2"></i>Status</th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach(order=> { %>
                <% order.orderitems.forEach(item=> { %>
                  <tr>
                    <!-- Product Name -->
                    <td>
                      <%= item.productId?.productName %>
                    </td>

                    <!-- Product ID -->
                    <td>
                      <span style="font-family: monospace; color: var(--primary);">
                        #<%= item.productId?._id.toString().slice(-6) %>
                      </span>
                    </td>

                    <!-- Price -->
                    <td class="fw-bold">₹<%= item.price %>
                    </td>

                    <!-- Category -->
                    <td>
                      <%= item.productId?.categoryId?.categoryName %>
                    </td>

                    <!-- Brand (or GST %) -->
                    <td>
                      <%= item.productId?.brandId?.brandName %>
                    </td>

                    <!-- Quantity -->
                    <td>
                      <span class="badge bg-light text-dark">
                        <%= item.quantity %>
                      </span>
                    </td>

                    <!-- Order ID -->
                    <td>
                      <span style="font-family: monospace; color: var(--primary);">
                        #ORD<%= order.orderId %>
                      </span>
                    </td>

                    <!-- Date -->
                    <td>
                      <%= order.createdOn.toLocaleDateString("en-IN", { day: "2-digit" , month: "short" ,
                        year: "numeric" }) %>
                    </td>

                    <!-- Location -->
                    <td>
                      <%= order.shippingAddress.city %>, <%= order.shippingAddress.state %>
                    </td>

                    <!-- Customer -->
                    <td>
                      <%= order.userId?.firstName %>
                    </td>

                    <!-- Total Amount -->
                    <td class="fw-bold">₹<%= order.finalAmount %>
                    </td>

                    <!-- Status -->
                    <td>
                      <% if (item.status==="Delivered" ) { %>
                        <span class="status-badge status-completed">
                          <i class="fas fa-check-circle"></i> Completed
                        </span>
                        <% } else if (item.status==="Cancelled" ) { %>
                          <span class="status-badge status-cancelled">
                            <i class="fas fa-times-circle"></i> Cancelled
                          </span>
                          <% } else { %>
                            <span class="status-badge status-pending">
                              <i class="fas fa-clock"></i>
                              <%= item.status %>
                            </span>
                            <% } %>
                    </td>
                  </tr>
                  <% }) %>
                    <% }) %>
            </tbody>

          </table>
        </div>

        <div class="pagination-section">
          <div class="pagination">
            <button class="page-btn" disabled>
              <i class="fas fa-chevron-left"></i> Previous
            </button>
            <button class="page-btn active">1</button>
            <button class="page-btn">2</button>
            <button class="page-btn">3</button>
            <button class="page-btn">
              Next <i class="fas fa-chevron-right"></i>
            </button>
          </div>
        </div>
      </section>
    </div>
  </main>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Initialize Chart
      initializeSalesChart();

      // Add loading animation on page load
      const sections = document.querySelectorAll('.stats-section, .chart-section, .controls-section, .table-section');
      sections.forEach((section, index) => {
        section.style.opacity = '0';
        section.style.transform = 'translateY(20px)';
        setTimeout(() => {
          section.style.transition = 'all 0.6s ease';
          section.style.opacity = '1';
          section.style.transform = 'translateY(0)';
        }, index * 100);
      });

      // Chart tab switching
      const chartTabs = document.querySelectorAll('.chart-tab');
      chartTabs.forEach(tab => {
        tab.addEventListener('click', function () {
          chartTabs.forEach(t => t.classList.remove('active'));
          this.classList.add('active');
          updateChart(this.dataset.period);
        });
      });
    });

    let salesChart;

    function initializeSalesChart() {
      const ctx = document.getElementById('salesChart').getContext('2d');

      salesChart = new Chart(ctx, {
        type: 'line',
        data: {
          labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
          datasets: [{
            label: 'Sales (₹)',
            data: [45000, 52000, 48000, 61000, 55000, 67000],
            borderColor: '#e74c3c',
            backgroundColor: 'rgba(231, 76, 60, 0.1)',
            tension: 0.4,
            fill: true
          }, {
            label: 'Orders',
            data: [45, 52, 48, 61, 55, 67],
            borderColor: '#28a745',
            backgroundColor: 'rgba(40, 167, 69, 0.1)',
            tension: 0.4,
            fill: true,
            yAxisID: 'y1'
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          interaction: {
            mode: 'index',
            intersect: false,
          },
          plugins: {
            legend: {
              position: 'top',
            }
          },
          scales: {
            y: {
              type: 'linear',
              display: true,
              position: 'left',
            },
            y1: {
              type: 'linear',
              display: true,
              position: 'right',
              grid: {
                drawOnChartArea: false,
              },
            }
          }
        }
      });
    }

    function updateChart(period) {
      let newData, newLabels;

      if (period === 'daily') {
        newLabels = ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'];
        newData = [[8000, 12000, 9500, 14000, 11000, 16000, 13000], [8, 12, 9, 14, 11, 16, 13]];
      } else if (period === 'weekly') {
        newLabels = ['Week 1', 'Week 2', 'Week 3', 'Week 4'];
        newData = [[45000, 52000, 48000, 61000], [45, 52, 48, 61]];
      } else {
        newLabels = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'];
        newData = [[45000, 52000, 48000, 61000, 55000, 67000], [45, 52, 48, 61, 55, 67]];
      }

      salesChart.data.labels = newLabels;
      salesChart.data.datasets[0].data = newData[0];
      salesChart.data.datasets[1].data = newData[1];
      salesChart.update();
    }

    function applyFilters() {
      Swal.fire({
        title: 'Applying Filters...',
        text: 'Please wait while we filter your data.',
        icon: 'info',
        allowOutsideClick: false,
        showConfirmButton: false,
        didOpen: () => {
          Swal.showLoading();
          setTimeout(() => {
            Swal.fire({
              title: 'Filters Applied!',
              text: 'Your sales report has been updated.',
              icon: 'success',
              confirmButtonColor: '#e74c3c',
              timer: 2000
            });
          }, 1500);
        }
      });
    }

    function clearFilters() {
      document.querySelectorAll('.filter-input').forEach(input => {
        input.value = '';
      });

      Swal.fire({
        title: 'Filters Cleared!',
        text: 'All filters have been reset.',
        icon: 'success',
        confirmButtonColor: '#e74c3c',
        timer: 1500,
        showConfirmButton: false
      });
    }

    function exportReport() {
      Swal.fire({
        title: 'Export Format',
        text: 'Choose your preferred export format:',
        icon: 'question',
        showCancelButton: true,
        showDenyButton: true,
        confirmButtonText: '<i class="fas fa-file-excel"></i> Excel',
        denyButtonText: '<i class="fas fa-file-pdf"></i> PDF',
        cancelButtonText: 'Cancel',
        confirmButtonColor: '#28a745',
        denyButtonColor: '#dc3545'
      }).then((result) => {
        if (result.isConfirmed) {
          Swal.fire({
            title: 'Exporting to Excel...',
            text: 'Your report is being prepared.',
            icon: 'info',
            timer: 2000,
            showConfirmButton: false
          });
        } else if (result.isDenied) {
          Swal.fire({
            title: 'Exporting to PDF...',
            text: 'Your report is being prepared.',
            icon: 'info',
            timer: 2000,
            showConfirmButton: false
          });
        }
      });
    }
  </script>
</body>

</html>