    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add loading animation on page load
            const sections = document.querySelectorAll('.controls-section, .table-section');
            sections.forEach((section, index) => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    section.style.transition = 'all 0.6s ease';
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });

        // Modal Functions
        function openAddCouponModal() {
            document.getElementById('addCouponModal').style.display = 'block';
        }

        function closeAddCouponModal() {
            document.getElementById('addCouponModal').style.display = 'none';
            document.getElementById('addCouponForm').reset();
        }

        async function openUpdateCouponModal(couponId) {
            try {
                // Show loading
                Swal.fire({
                    title: 'Loading...',
                    text: 'Please wait while we fetch coupon details.',
                    icon: 'info',
                    allowOutsideClick: false,
                    showConfirmButton: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });

                const response = await fetch(`/get-coupon/${couponId}`);
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }
                
                const data = await response.json();
                
                if (!data.success) {
                    throw new Error(data.message || 'Failed to fetch coupon data');
                }

                const coupon = data.coupon;
                
                // Populate form fields
                document.getElementById('updateCouponCode').value = coupon.couponCode;
                document.getElementById('updateCouponType').value = coupon.couponType;
                document.getElementById('updateCouponAmount').value = coupon.couponAmount;
                document.getElementById('updateUsageLimit').value = coupon.usageLimit;
                document.getElementById('updateDescription').value = coupon.description || '';
                document.getElementById('updateStartDate').value = coupon.startDate;
                document.getElementById('updateExpiryDate').value = coupon.expiryDate;
                document.getElementById('updateStatus').value = coupon.status || 'active';
                
                // Store coupon ID
                document.getElementById('updateCouponForm').dataset.couponId = coupon._id;
                
                // Close loading and show modal
                Swal.close();
                document.getElementById('updateCouponModal').style.display = 'block';
            } catch (error) {
                console.error('Error loading coupon data:', error);
                Swal.fire({
                    title: 'Error!',
                    text: 'Failed to load coupon details: ' + error.message,
                    icon: 'error',
                    confirmButtonColor: '#e74c3c'
                });
            }
        }

        function closeUpdateCouponModal() {
            document.getElementById('updateCouponModal').style.display = 'none';
            document.getElementById('updateCouponForm').reset();
        }

        // Form Submission Handlers
        document.getElementById('addCouponForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            
            // Show loading
            Swal.fire({
                title: 'Adding Coupon...',
                text: 'Please wait while we create your coupon.',
                icon: 'info',
                allowOutsideClick: false,
                showConfirmButton: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            try {
                const couponCode = document.getElementById("couponCode").value;
                const couponType = document.getElementById("couponType").value;
                const Amount = document.getElementById("couponAmount").value;
                const Limit = document.getElementById("usageLimit").value;
                const description = document.getElementById("description").value;
                const start = document.getElementById("startDate").value;
                const end = document.getElementById("expiryDate").value;

                const response = await fetch('/addcoupen', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ couponCode, couponType, Amount, Limit, description, start, end }),
                });

                const data = await response.json();

                if (data.success) {
                    Swal.fire({
                        title: 'Success!',
                        text: 'Coupon added successfully!',
                        icon: 'success',
                        confirmButtonColor: '#e74c3c'
                    }).then(() => {
                        window.location.reload();
                    });
                } else {
                    throw new Error(data.fail || 'Failed to add coupon');
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error!',
                    text: error.message || 'Something went wrong while adding the coupon.',
                    icon: 'error',
                    confirmButtonColor: '#e74c3c'
                });
            }
        });

        document.getElementById('updateCouponForm').addEventListener('submit', async function (e) {
            e.preventDefault();
            
            // Show loading
            Swal.fire({
                title: 'Updating Coupon...',
                text: 'Please wait while we update your coupon.',
                icon: 'info',
                allowOutsideClick: false,
                showConfirmButton: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            try {
                const coupenID = this.dataset.couponId;
                const couponCode = document.getElementById("updateCouponCode").value;
                const couponType = document.getElementById("updateCouponType").value;
                const Amount = document.getElementById("updateCouponAmount").value;
                const Limit = document.getElementById("updateUsageLimit").value;
                const description = document.getElementById("updateDescription").value;
                const start = document.getElementById("updateStartDate").value;
                const end = document.getElementById("updateExpiryDate").value;
                const status = document.getElementById("updateStatus").value;

                const response = await fetch(`/updatecoupen/${coupenID}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ couponCode, couponType, Amount, Limit, description, start, end, status }),
                });

                const data = await response.json();

                if (data.success) {
                    Swal.fire({
                        title: 'Success!',
                        text: 'Coupon updated successfully!',
                        icon: 'success',
                        confirmButtonColor: '#e74c3c'
                    }).then(() => {
                        window.location.reload();
                    });
                } else {
                    throw new Error(data.fail || 'Failed to update coupon');
                }
            } catch (error) {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error!',
                    text: error.message || 'Something went wrong while updating the coupon.',
                    icon: 'error',
                    confirmButtonColor: '#e74c3c'
                });
            }
        });

        // Delete Confirmation
        async function confirmDelete(couponId) {
            Swal.fire({
                title: 'Delete Coupon?',
                text: 'Are you sure you want to delete this coupon? This action cannot be undone.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!'
            }).then(async (result) => {
                if (result.isConfirmed) {
                    try {
                        // Show loading
                        Swal.fire({
                            title: 'Deleting...',
                            text: 'Please wait while we delete the coupon.',
                            icon: 'info',
                            allowOutsideClick: false,
                            showConfirmButton: false,
                            didOpen: () => {
                                Swal.showLoading();
                            }
                        });

                        const response = await fetch(`/deleteCoupen/${couponId}`, {
                            method: 'DELETE',
                            headers: { 'Content-Type': 'application/json' },
                        });

                        const data = await response.json();

                        if (data.success) {
                            Swal.fire({
                                title: 'Deleted!',
                                text: 'Coupon has been deleted successfully.',
                                icon: 'success',
                                confirmButtonColor: '#e74c3c'
                            }).then(() => {
                                window.location.reload();
                            });
                        } else {
                            throw new Error(data.fail || 'Failed to delete coupon');
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        Swal.fire({
                            title: 'Error!',
                            text: error.message || 'Something went wrong while deleting the coupon.',
                            icon: 'error',
                            confirmButtonColor: '#e74c3c'
                        });
                    }
                }
            });
        }

        // Close modals when clicking outside
        window.onclick = function (event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
            }
        }
    </script>
</body>
