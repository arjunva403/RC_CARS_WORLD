<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Login - RC WORLD</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
  <style>
    :root {
      --primary: #e74c3c;
      --light: #f9f9f9;
      --dark: #2c3e50;
      --gray: #bdc3c7;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', sans-serif;
    }

    body {
      background: var(--light);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .login-box {
      background: #fff;
      padding: 2.5rem 3rem;
      border-radius: 15px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
      width: 100%;
      max-width: 400px;
    }

    .login-box h2 {
      margin-bottom: 1.5rem;
      color: var(--primary);
      text-align: center;
    }

    .login-box label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: bold;
      color: var(--dark);
    }

    .login-box input[type="text"],
    .login-box input[type="password"] {
      width: 100%;
      padding: 0.75rem;
      margin-bottom: 1.5rem;
      border: 1px solid var(--gray);
      border-radius: 8px;
      transition: border 0.3s;
    }

    .login-box input:focus {
      outline: none;
      border-color: var(--primary);
    }

    .login-box .btn {
      width: 100%;
      padding: 0.75rem;
      background: var(--primary);
      border: none;
      color: white;
      font-weight: bold;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.3s;
    }

    .login-box button:hover {
      background: #c0392b;
    }

    .login-box .footer {
      text-align: center;
      margin-top: 1rem;
      color: var(--dark);
      font-size: 0.9rem;
    }
  </style>
</head>
<body>
  <div class="login-box">
    <h2>Admin Login</h2>
   <span id="usernotfount"></span>
    <form id="adminlogin">
      <label for="username">Username</label>
      <span id="wronguser" style="color: red;"></span>
      <input type="text" id="username" placeholder="Enter admin username" required />
     

      <label for="password">Password</label>
      <span id="wrongpass" style="color: red;"></span>
      <input type="password" id="password" placeholder="Enter password" required />
          <button class="btn" type="submit">Login</button>
    </form>
    <div class="footer">&copy; 2025 RC WORLD - Admin Panel</div>
  </div>
</body>
<script>
  document.getElementById("adminlogin").addEventListener("submit", async (e)=>{
    e.preventDefault()
    let username = document.getElementById("username").value;
    let password = document.getElementById("password").value;

  let responce= await fetch("/adminverifylogin",{
    method :"POST",
    headers:{
       "content-type":"application/json"
    },
    body:JSON.stringify({
      username:username,
      password:password
    }),
  })
  let data = await responce.json()
     console.log(data)
     if(data.success){
      window.location.href="/dashboard" 
     }
     if(data.wronguser){
       document.getElementById("wronguser").innerHTML=data.wronguser
     }
     if(data.wrongpass){
     document.getElementById("wrongpass").innerHTML=data.wrongpass
     }
   
  })
</script>
</html>