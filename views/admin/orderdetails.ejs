<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details - RC WORLD Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        :root {
            --primary: #e74c3c;
            --primary-dark: #c0392b;
            --light-gray: #f8f9fa;
            --dark: #2c3e50;
            --text-gray: #6c757d;
            --bg: #ffffff;
            --border: #dee2e6;
            --success: #28a745;
            --warning: #ffc107;
            --info: #17a2b8;
            --danger: #dc3545;
            --shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            --shadow-lg: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background-color: var(--light-gray);
            color: var(--dark);
            line-height: 1.6;
        }

        /* Enhanced Sidebar - Same as Dashboard */
        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            width: 280px;
            height: 100vh;
            background: linear-gradient(180deg, var(--bg) 0%, #f8f9fa 100%);
            border-right: 1px solid var(--border);
            z-index: 1000;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            overflow-y: auto;
        }

        .sidebar-header {
            padding: 2rem 1.5rem 1.5rem;
            border-bottom: 1px solid var(--border);
        }

        .sidebar h2 {
            color: var(--primary);
            font-size: 1.5rem;
            font-weight: 700;
            text-align: center;
            letter-spacing: -0.025em;
        }

        .sidebar-nav {
            padding: 1rem 0;
        }

        .nav-item {
            margin: 0.25rem 1rem;
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.875rem 1rem;
            color: var(--text-gray);
            text-decoration: none;
            border-radius: 0.5rem;
            font-weight: 500;
            font-size: 0.875rem;
            transition: all 0.2s ease;
            position: relative;
            overflow: hidden;
        }

        .nav-link::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            height: 100%;
            width: 3px;
            background: var(--primary);
            transform: scaleY(0);
            transition: transform 0.2s ease;
        }

        .nav-link:hover {
            background: rgba(231, 76, 60, 0.08);
            color: var(--primary);
            transform: translateX(4px);
        }

        .nav-link.active {
            background: rgba(231, 76, 60, 0.1);
            color: var(--primary);
            font-weight: 600;
        }

        .nav-link.active::before {
            transform: scaleY(1);
        }

        .nav-icon {
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Enhanced Main Content */
        .main-content {
            margin-left: 280px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Enhanced Top Bar */
        .topbar {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
            color: white;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: var(--shadow-lg);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .topbar-left {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .topbar-left h1 {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 0;
        }

        .breadcrumb {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
            opacity: 0.9;
        }

        .breadcrumb a {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
        }

        .breadcrumb a:hover {
            color: white;
        }

        .topbar-right {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
        }

        .logout-btn {
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 0.375rem;
            transition: all 0.2s ease;
            background: rgba(255, 255, 255, 0.1);
            border: none;
        }

        .logout-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-1px);
            color: white;
        }

        /* Enhanced Content Area */
        .content {
            flex: 1;
            padding: 2rem;
        }

        .page-header {
            margin-bottom: 2rem;
        }

        .page-title {
            font-size: 1.75rem;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 0.5rem;
        }

        .page-subtitle {
            color: var(--text-gray);
            font-size: 0.875rem;
        }

        /* Enhanced Back Button */
        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: var(--bg);
            color: var(--dark);
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            text-decoration: none;
            font-weight: 500;
            margin-bottom: 1.5rem;
            border: 1px solid var(--border);
            transition: all 0.2s ease;
            box-shadow: var(--shadow);
        }

        .back-btn:hover {
            background: var(--light-gray);
            transform: translateY(-1px);
            color: var(--dark);
        }

        /* Order Header Card */
        .order-header-card {
            background: var(--bg);
            border-radius: 0.75rem;
            padding: 1.5rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--border);
            margin-bottom: 1.5rem;
            position: relative;
            overflow: hidden;
        }

        .order-header-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary), var(--primary-dark));
        }

        .order-id-display {
            font-family: 'Courier New', monospace;
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 0.5rem;
        }

        .order-date {
            color: var(--text-gray);
            font-size: 0.875rem;
        }

        /* Enhanced Stats Cards */
        .stats-section {
            margin-bottom: 1.5rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 1rem;
        }

        .stat-card {
            background: var(--bg);
            border-radius: 0.75rem;
            padding: 1.5rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--border);
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--primary), var(--primary-dark));
        }

        .stat-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 0.5rem;
        }

        .stat-title {
            font-size: 0.75rem;
            font-weight: 500;
            color: var(--text-gray);
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .stat-icon {
            width: 40px;
            height: 40px;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.125rem;
        }

        .stat-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--dark);
        }

        /* Enhanced Content Sections */
        .content-section {
            background: var(--bg);
            border-radius: 0.75rem;
            padding: 1.5rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--border);
            margin-bottom: 1.5rem;
        }

        .section-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--dark);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        /* Enhanced Table */
        .table {
            margin-bottom: 0;
        }

        .table thead th {
            background: #f8f9fa;
            border-bottom: 2px solid var(--border);
            font-weight: 600;
            color: var(--dark);
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.05em;
            padding: 1rem 0.75rem;
        }

        .table tbody td {
            padding: 1rem 0.75rem;
            border-bottom: 1px solid var(--border);
            vertical-align: middle;
        }

        .table tbody tr:hover {
            background: rgba(231, 76, 60, 0.02);
        }

        .table tbody tr:last-child td {
            border-bottom: none;
        }

        .product-img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 0.5rem;
            border: 2px solid var(--border);
        }

        .product-name {
            font-weight: 600;
            color: var(--dark);
        }

        /* Enhanced Status Badges */
        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 1.5rem;
            font-weight: 500;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.025em;
            transition: all 0.3s ease;
            box-shadow: var(--shadow);
        }

        .status-badge:hover {
            transform: translateY(-1px);
            box-shadow: var(--shadow-lg);
        }

        .status-shipped {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .status-delivered {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
        }

        .status-processing {
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
            color: white;
        }

        .status-pending {
            background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
            color: #8b4513;
        }

        .status-cancelled {
            background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
            color: #dc3545;
        }

        .status-return-request {
            background: linear-gradient(135deg, #ffb347 0%, #ffcc33 100%);
            color: #8b4513;
        }

        .status-returned {
            background: linear-gradient(135deg, #56ab2f 0%, #a8e063 100%);
            color: white;
        }

        .status-return-rejected {
            background: linear-gradient(135deg, #ed213a 0%, #93291e 100%);
            color: white;
        }

        .status-return-accepted {
            background: linear-gradient(135deg, #56ab2f 0%, #a8e063 100%);
            color: white;
        }

        .status-icon {
            font-size: 0.875rem;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        .message-icon {
            cursor: pointer;
            color: var(--primary);
            margin-left: 0.5rem;
            font-size: 1rem;
            transition: all 0.2s ease;
        }

        .message-icon:hover {
            color: var(--primary-dark);
            transform: scale(1.1);
        }

        /* Customer Details Grid */
        .customer-details-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .detail-item {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .detail-label {
            font-weight: 500;
            color: var(--text-gray);
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.025em;
        }

        .detail-value {
            font-weight: 600;
            color: var(--dark);
        }

        /* Enhanced Action Buttons */
        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            flex-wrap: wrap;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            font-size: 0.875rem;
            font-weight: 500;
            border-radius: 0.5rem;
            border: none;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
        }

        .btn-primary {
            background: var(--primary);
            color: white;
        }

        .btn-primary:hover {
            background: var(--primary-dark);
            transform: translateY(-1px);
            box-shadow: var(--shadow);
            color: white;
        }

        .btn-outline-primary {
            color: var(--primary);
            border: 1px solid var(--primary);
            background: transparent;
        }

        .btn-outline-primary:hover {
            background: var(--primary);
            color: white;
            transform: translateY(-1px);
        }

        .btn-accept {
            background: var(--success);
            color: white;
        }

        .btn-accept:hover {
            background: #218838;
            transform: translateY(-1px);
        }

        .btn-reject {
            background: var(--danger);
            color: white;
        }

        .btn-reject:hover {
            background: #c82333;
            transform: translateY(-1px);
        }

        /* Responsive Design */
        @media (max-width: 1200px) {
            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .topbar {
                padding: 1rem;
                flex-direction: column;
                gap: 1rem;
            }
            
            .breadcrumb {
                order: -1;
            }
            
            .content {
                padding: 1rem;
            }
            
            .stats-grid {
                grid-template-columns: 1fr;
            }

            .customer-details-grid {
                grid-template-columns: 1fr;
            }

            .action-buttons {
                flex-direction: column;
            }
        }

        /* Loading Animation */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .order-header-card, .stats-section, .content-section {
            animation: fadeInUp 0.6s ease forwards;
        }

        .stats-section {
            animation-delay: 0.1s;
        }

        .content-section {
            animation-delay: 0.2s;
        }

        /* Fixed Modal Backdrop Issue */
        .modal-backdrop {
            background-color: rgba(0, 0, 0, 0.4) !important;
            pointer-events: none !important;
        }

        .modal {
            pointer-events: auto !important;
        }

        .modal-dialog {
            pointer-events: auto !important;
        }

        .modal-content {
            pointer-events: auto !important;
            position: relative;
            z-index: 1060;
        }
    </style>
</head>

<body>
    <!-- Enhanced Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <h2>RC WORLD</h2>
        </div>
        <nav class="sidebar-nav">
            <div class="nav-item">
                <a href="/dashboard" class="nav-link">
                    <div class="nav-icon"><i class="fas fa-tachometer-alt"></i></div>
                    <span>Dashboard</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/category" class="nav-link">
                    <div class="nav-icon"><i class="fas fa-tags"></i></div>
                    <span>Category</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/brands" class="nav-link">
                    <div class="nav-icon"><i class="fas fa-trademark"></i></div>
                    <span>Brands</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/products" class="nav-link">
                    <div class="nav-icon"><i class="fas fa-box"></i></div>
                    <span>Products</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/usermange" class="nav-link">
                    <div class="nav-icon"><i class="fas fa-users"></i></div>
                    <span>Customers</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/order" class="nav-link active">
                    <div class="nav-icon"><i class="fas fa-shopping-cart"></i></div>
                    <span>Orders</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/saleReport" class="nav-link">
                    <div class="nav-icon"><i class="fas fa-chart-line"></i></div>
                    <span>Sales Report</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="#" class="nav-link">
                    <div class="nav-icon"><i class="fas fa-cog"></i></div>
                    <span>Settings</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="#" class="nav-link">
                    <div class="nav-icon"><i class="fas fa-image"></i></div>
                    <span>Banner Manage</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/coupen" class="nav-link">
                    <div class="nav-icon"><i class="fas fa-ticket-alt"></i></div>
                    <span>Manage Coupons</span>
                </a>
            </div>
            <div class="nav-item">
                <a href="/offer" class="nav-link">
                    <div class="nav-icon"><i class="fas fa-percent"></i></div>
                    <span>Offers Management</span>
                </a>
            </div>
        </nav>
    </aside>

    <!-- Enhanced Main Content -->
    <main class="main-content">
        <!-- Enhanced Top Bar -->
        <header class="topbar">
            <div class="topbar-left">
                <h1>Order Details</h1>
                <div class="breadcrumb">
                    <a href="/order"><i class="fas fa-shopping-cart"></i> Orders</a>
                    <i class="fas fa-chevron-right"></i>
                    <span>Order Details</span>
                </div>
            </div>
            <div class="topbar-right">
                <div class="user-info">
                    <i class="fas fa-user-circle"></i>
                    <span>Welcome, Admin</span>
                </div>
                <div class="user-info">
                    <i class="fas fa-cog"></i>
                </div>
                <button class="logout-btn" onclick="window.location.href='/logout'">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Logout</span>
                </button>
            </div>
        </header>

        <!-- Enhanced Content -->
        <div class="content">
            <!-- Page Header -->
            <div class="page-header">
                <h2 class="page-title">Order Overview</h2>
                <p class="page-subtitle">Complete details and management options for this order</p>
            </div>

            <a href="/order" class="back-btn">
                <i class="fas fa-arrow-left"></i>
                <span>Back to Orders</span>
            </a>

            <!-- Order Header Card -->
            <section class="order-header-card">
                <div class="order-id-display">Order ID: #ORD-<%= order.orderId %></div>
                <div class="order-date">
                    Placed on <%= new Date(order.createdOn).toLocaleDateString("en-IN", { 
                        year: 'numeric', 
                        month: 'short', 
                        day: 'numeric' 
                    }) %>
                </div>
            </section>

            <!-- Enhanced Stats Section -->
            <section class="stats-section">
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-header">
                            <div class="stat-title">Total Items</div>
                            <div class="stat-icon" style="background: rgba(231, 76, 60, 0.1); color: var(--primary);">
                                <i class="fas fa-box"></i>
                            </div>
                        </div>
                        <div class="stat-value"><%= order.orderitems.length %></div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-header">
                            <div class="stat-title">Total Quantity</div>
                            <div class="stat-icon" style="background: rgba(255, 193, 7, 0.1); color: var(--warning);">
                                <i class="fas fa-layer-group"></i>
                            </div>
                        </div>
                        <div class="stat-value"><%= totalqty %></div>
                    </div>
                    
                    <div class="stat-card">
                        <div class="stat-header">
                            <div class="stat-title">Order Total</div>
                            <div class="stat-icon" style="background: rgba(40, 167, 69, 0.1); color: var(--success);">
                                <i class="fas fa-rupee-sign"></i>
                            </div>
                        </div>
                        <div class="stat-value">₹<%= order.totalPrice.toLocaleString("en-IN") %></div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-header">
                            <div class="stat-title">Payment Status</div>
                            <div class="stat-icon" style="background: rgba(23, 162, 184, 0.1); color: var(--info);">
                                <i class="fas fa-money-bill-wave"></i>
                            </div>
                        </div>
                        <div class="stat-value" style="font-size: 1rem; color: var(--warning);"><%= order.paymentMethod %></div>
                    </div>
                </div>
            </section>

            <!-- Enhanced Ordered Items Section -->
            <section class="content-section">
                <h3 class="section-title">
                    <i class="fas fa-list"></i>
                    Ordered Items
                </h3>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    <i class="fas fa-image me-2"></i>
                                    Image
                                </th>
                                <th>
                                    <i class="fas fa-tag me-2"></i>
                                    Product Name
                                </th>
                                <th>
                                    <i class="fas fa-sort-numeric-up me-2"></i>
                                    Quantity
                                </th>
                                <th>
                                    <i class="fas fa-rupee-sign me-2"></i>
                                    Price
                                </th>
                                <th>
                                    <i class="fas fa-truck me-2"></i>
                                    Status
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% order.orderitems.forEach((item, index) => { %>
                                <tr>
                                    <td>
                                        <img src="<%= item.productId.images[0] %>" alt="Product Image" class="product-img">
                                    </td>
                                    <td>
                                        <div class="product-name"><%= item.productId.productName %></div>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark"><%= item.quantity %></span>
                                    </td>
                                    <td class="fw-bold">
                                        ₹<%= item.productId.discountPrice.toLocaleString("en-IN") %>
                                    </td>
                                    <td>
                                        <% 
                                        const statusClass = item.status.toLowerCase() === 'shipped' ? 'status-shipped' :
                                            item.status.toLowerCase() === 'delivered' ? 'status-delivered' :
                                            item.status.toLowerCase() === 'pending' ? 'status-pending' :
                                            item.status.toLowerCase() === 'cancelled' ? 'status-cancelled' :
                                            item.status.toLowerCase() === 'return request' ? 'status-return-request' :
                                            item.status.toLowerCase() === 'returned' ? 'status-returned' :
                                            item.status.toLowerCase() === 'return rejected' ? 'status-return-rejected' :
                                            item.status.toLowerCase() === 'return accepted' ? 'status-return-accepted' : 'status-processing';
                                        
                                        const statusIcon = item.status.toLowerCase() === 'shipped' ? 'fa-shipping-fast' :
                                            item.status.toLowerCase() === 'delivered' ? 'fa-check-circle' :
                                            item.status.toLowerCase() === 'pending' ? 'fa-hourglass-half' :
                                            item.status.toLowerCase() === 'cancelled' ? 'fa-times-circle' :
                                            item.status.toLowerCase() === 'return request' ? 'fa-undo' :
                                            item.status.toLowerCase() === 'returned' ? 'fa-check-circle' :
                                            item.status.toLowerCase() === 'return rejected' ? 'fa-times-circle' :
                                            item.status.toLowerCase() === 'return accepted' ? 'fa-check-circle' : 'fa-clock';
                                        %>
                                        <span class="status-badge <%= statusClass %>">
                                            <i class="fas <%= statusIcon %> status-icon"></i>
                                            <%= item.status %>
                                        </span>

                                        <% if (item.status.toLowerCase() === 'cancelled') { %>
                                            <i class="fas fa-envelope message-icon" data-bs-toggle="modal"
                                                data-bs-target="#cancelModal<%= index %>" title="View cancellation details"></i>
                                        <% } %>

                                        <% if (item.status.toLowerCase() === 'return request') { %>
                                            <i class="fas fa-envelope message-icon" data-bs-toggle="modal"
                                                data-bs-target="#returnModal<%= index %>" title="Manage return request"></i>
                                        <% } %>
                                    </td>
                                </tr>

                                <!-- Enhanced Cancellation Modal -->
                                <% if (item.status.toLowerCase() === 'cancelled') { %>
                                    <div class="modal fade" id="cancelModal<%= index %>" tabindex="-1"
                                        aria-labelledby="cancelModalLabel<%= index %>" aria-hidden="true" 
                                        data-bs-backdrop="static" data-bs-keyboard="false">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="cancelModalLabel<%= index %>">
                                                        <i class="fas fa-times-circle me-2"></i>
                                                        Cancellation Details
                                                    </h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="mb-3">
                                                        <label class="fw-bold">Product:</label>
                                                        <p class="mb-0"><%= item.productId.productName %></p>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="fw-bold">Cancellation Reason:</label>
                                                        <p class="mb-0"><%= item.cancellationReason || 'Not specified' %></p>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">
                                                        <i class="fas fa-times"></i> Close
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>

                                <!-- Enhanced Return Request Modal -->
                                <% if (item.status.toLowerCase() === 'return request') { %>
                                    <div class="modal fade" id="returnModal<%= index %>" tabindex="-1"
                                        aria-labelledby="returnModalLabel<%= index %>" aria-hidden="true"
                                        data-bs-backdrop="static" data-bs-keyboard="false">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="returnModalLabel<%= index %>">
                                                        <i class="fas fa-undo me-2"></i>
                                                        Return Request Details
                                                    </h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="mb-3">
                                                        <label class="fw-bold">Product:</label>
                                                        <p class="mb-0"><%= item.productId.productName %></p>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="fw-bold">Return Reason:</label>
                                                        <p class="mb-0"><%= item.returnReason || 'Not specified' %></p>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-accept"
                                                        onclick="returnStatus('Accept','<%= item._id %>','<%= order._id %>')"
                                                        data-bs-dismiss="modal">
                                                        <i class="fas fa-check"></i>
                                                        Accept Return
                                                    </button>
                                                    <button type="button" class="btn btn-reject"
                                                        onclick="returnStatus('Reject','<%= item._id %>','<%= order._id %>')"
                                                        data-bs-dismiss="modal">
                                                        <i class="fas fa-times"></i>
                                                        Reject Return
                                                    </button>
                                                    <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">
                                                        <i class="fas fa-times"></i> Close
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </section>

            <!-- Enhanced Customer Details Section -->
            <section class="content-section">
                <h3 class="section-title">
                    <i class="fas fa-user"></i>
                    Customer Details
                </h3>
                <div class="customer-details-grid">
                    <div class="detail-item">
                        <div class="detail-label">Customer Name</div>
                        <div class="detail-value"><%= order.shippingAddress.title %></div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Phone Number</div>
                        <div class="detail-value"><%= order.shippingAddress.phone %></div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Alternate Phone</div>
                        <div class="detail-value"><%= order.shippingAddress.altPhone %></div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Address Type</div>
                        <div class="detail-value"><%= order.shippingAddress.addressType %></div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Payment Method</div>
                        <div class="detail-value"><%= order.paymentMethod %></div>
                    </div>
                    <div class="detail-item">
                        <div class="detail-label">Shipping Address</div>
                        <div class="detail-value">
                            <%= order.shippingAddress.address %><br>
                            <%= order.shippingAddress.landmark %><br>
                            <%= order.shippingAddress.city %>, <%= order.shippingAddress.state %><br>
                            <%= order.shippingAddress.pincode %>, India
                        </div>
                    </div>
                </div>
            </section>

            <!-- Enhanced Action Buttons -->
            <div class="action-buttons">
                <button class="btn btn-primary" onclick="window.print()">
                    <i class="fas fa-print"></i>
                    Print Invoice
                </button>
                <button class="btn btn-outline-primary" onclick="updateShipping()">
                    <i class="fas fa-truck"></i>
                    Update Shipping
                </button>
                <button class="btn btn-outline-primary" onclick="cancelOrder()">
                    <i class="fas fa-times"></i>
                    Cancel Order
                </button>
                <button class="btn btn-outline-primary" onclick="window.history.back()">
                    <i class="fas fa-arrow-left"></i>
                    Back to Orders
                </button>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Add loading animation on page load
            const sections = document.querySelectorAll('.order-header-card, .stats-section, .content-section');
            sections.forEach((section, index) => {
                section.style.opacity = '0';
                section.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    section.style.transition = 'all 0.6s ease';
                    section.style.opacity = '1';
                    section.style.transform = 'translateY(0)';
                }, index * 100);
            });

            // Fix modal backdrop issue
            document.querySelectorAll('.modal').forEach(modal => {
                modal.addEventListener('show.bs.modal', function (e) {
                    // Ensure proper z-index and pointer events
                    this.style.zIndex = 1055;
                    this.style.pointerEvents = 'auto';
                });

                modal.addEventListener('shown.bs.modal', function (e) {
                    // Fix backdrop issue after modal is shown
                    const backdrop = document.querySelector('.modal-backdrop');
                    if (backdrop) {
                        backdrop.style.backgroundColor = 'rgba(0, 0, 0, 0.4)';
                        backdrop.style.pointerEvents = 'none';
                    }
                });

                modal.addEventListener('hide.bs.modal', function (e) {
                    // Clean up on hide
                    this.style.zIndex = '';
                    this.style.pointerEvents = '';
                });
            });

            // Prevent modal content from propagating clicks to backdrop
            document.querySelectorAll('.modal-content').forEach(content => {
                content.addEventListener('click', function(e) {
                    e.stopPropagation();
                });
            });
        });

        function returnStatus(value, itemId, orderId) {
            Swal.fire({
                title: `${value} Return Request?`,
                text: `Are you sure you want to ${value.toLowerCase()} this return request?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: value === 'Accept' ? '#28a745' : '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: `Yes, ${value.toLowerCase()} it!`
            }).then((result) => {
                if (result.isConfirmed) {
                    // Show loading
                    Swal.fire({
                        title: 'Processing...',
                        text: `${value}ing return request...`,
                        icon: 'info',
                        allowOutsideClick: false,
                        showConfirmButton: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });

                    fetch('/returnStatus', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ value, itemId, orderId })
                    })
                    .then(response => response.json())
                    .then(data => {
                        Swal.fire({
                            title: 'Success!',
                            text: data.message || "Action completed successfully",
                            icon: 'success',
                            confirmButtonColor: '#e74c3c'
                        }).then(() => {
                            location.reload();
                        });
                    })
                    .catch(err => {
                        console.error("Error:", err);
                        Swal.fire({
                            title: 'Error!',
                            text: "Something went wrong. Please try again.",
                            icon: 'error',
                            confirmButtonColor: '#e74c3c'
                        });
                    });
                }
            });
        }

        function updateShipping() {
            Swal.fire({
                title: 'Update Shipping Status',
                input: 'select',
                inputOptions: {
                    'Delivered': 'Delivered',
                    'Processing': 'Processing',
                    'Pending': 'Pending',
                    'Cancelled': 'Cancelled',
                    'Return Request': 'Return Request'
                },
                inputPlaceholder: 'Select new status',
                showCancelButton: true,
                confirmButtonColor: '#e74c3c',
                inputValidator: (value) => {
                    if (!value) {
                        return 'You need to select a status!'
                    }
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Success!',
                        text: `All items updated to "${result.value}" status`,
                        icon: 'success',
                        confirmButtonColor: '#e74c3c'
                    });
                }
            });
        }

        function cancelOrder() {
            Swal.fire({
                title: 'Cancel Order?',
                text: 'Are you sure you want to cancel this entire order?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, cancel it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Order Cancelled!',
                        text: 'The order has been cancelled successfully.',
                        icon: 'success',
                        confirmButtonColor: '#e74c3c'
                    });
                }
            });
        }
    </script>
</body>
</html>
