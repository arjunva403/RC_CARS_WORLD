  <!-- Enhanced Main Content -->
  <main class="main-content">
    <!-- Enhanced Top Bar -->
    <header class="topbar">
      <div class="topbar-left">
        <h1>Edit Product</h1>
        <div class="breadcrumb">
          <a href="/products"><i class="fas fa-box"></i> Products</a>
          <i class="fas fa-chevron-right"></i>
          <span>Edit Product</span>
        </div>
      </div>
      <div class="topbar-right">
        <div class="user-info">
          <i class="fas fa-user-circle"></i>
          <span>Welcome, Admin</span>
        </div>
        <div class="user-info">
          <i class="fas fa-cog"></i>
        </div>
        <a href="/logout" class="logout-btn">
          <i class="fas fa-sign-out-alt"></i>
          <span>Logout</span>
        </a>
      </div>
    </header>

    <!-- Enhanced Content -->
    <div class="content">
      <!-- Page Header -->
      <div class="page-header">
        <h2 class="page-title">Edit Product Details</h2>
        <p class="page-subtitle">Update product information and manage inventory</p>
      </div>

      <a href="/products" class="back-btn">
        <i class="fas fa-arrow-left"></i>
        <span>Back to Products</span>
      </a>

      <!-- Product Info Card -->
      <section class="product-info-card">
        <div class="product-summary">
          <img src="<%= product.images[0] %>" alt="<%= product.productName %>" class="product-thumbnail">
          <div class="product-details">
            <h3><%= product.productName %></h3>
            <div class="product-meta">
              <span><i class="fas fa-tag"></i> <%= product.categoryId.categoryName %></span>
              <span><i class="fas fa-trademark"></i> <%= product.brandId.brandName %></span>
              <span class="product-status <%= product.isListed ? 'status-listed' : 'status-unlisted' %>">
                <i class="fas fa-<%= product.isListed ? 'eye' : 'eye-slash' %>"></i>
                <%= product.isListed ? 'Listed' : 'Unlisted' %>
              </span>
            </div>
          </div>
        </div>
      </section>

      <!-- Enhanced Form Section -->
      <section class="form-section">
        <div class="form-header">
          <h3 class="form-title">
            <i class="fas fa-edit"></i>
            Product Information
          </h3>
        </div>

        <form id="productForm" method="post" action="/editproduct/<%= product._id %>" enctype="multipart/form-data" class="product-form">
          <!-- Basic Information -->
          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-tag"></i>
              Product Name *
            </label>
            <input type="text" name="name" class="form-control" value="<%= product.productName %>" 
                   placeholder="Enter product name" required />
          </div>

          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-trademark"></i>
              Brand *
            </label>
            <select name="brand" class="form-control" required>
              <option value="">Select Brand</option>
              <% brands.forEach(brand => { %>
                <option value="<%= brand._id %>" <%= product.brandId._id.toString() === brand._id.toString() ? 'selected' : '' %>>
                  <%= brand.brandName %>
                </option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-list"></i>
              Category *
            </label>
            <select name="category" class="form-control" required>
              <option value="">Select Category</option>
              <% categories.forEach(category => { %>
                <option value="<%= category._id %>" <%= product.categoryId._id.toString() === category._id.toString() ? 'selected' : '' %>>
                  <%= category.categoryName %>
                </option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-rupee-sign"></i>
              Base Price (₹) *
            </label>
            <input type="number" name="price" class="form-control" value="<%= product.baseprice %>" 
                   placeholder="0.00" min="0" step="0.01" required />
          </div>

          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-percent"></i>
              Sale Price (₹) *
            </label>
            <input type="number" name="discount" class="form-control" value="<%= product.discountPrice %>" 
                   placeholder="0.00" min="0" step="0.01" required />
          </div>

          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-warehouse"></i>
              Stock Quantity *
            </label>
            <input type="number" name="stock" class="form-control" value="<%= product.stock %>" 
                   placeholder="0" min="0" required />
          </div>

          <!-- Enhanced Image Management Section -->
          <div class="image-management-section">
            <div class="image-section-header">
              <h4 class="section-title">
                <i class="fas fa-images"></i>
                Product Images
              </h4>
              <div class="image-info">
                Click images to replace • Click X to remove • Maximum 3 images
              </div>
            </div>
            
            <div class="image-grid" id="imageGrid">
              <% product.images.forEach((image, index) => { %>
                <div class="image-slot filled" data-index="<%= index %>">
                  <img src="<%= image %>" alt="Product Image">
                  <input type="hidden" name="existingImages[]" value="<%= image %>">
                  <div class="image-overlay">
                    <button type="button" class="overlay-btn btn-edit-image" onclick="replaceImage(this)" title="Replace Image">
                      <i class="fas fa-edit"></i>
                    </button>
                    <button type="button" class="overlay-btn btn-remove-image" onclick="removeImage(this)" title="Remove Image">
                      <i class="fas fa-trash"></i>
                    </button>
                  </div>
                  <input type="file" class="single-image-input" name="images" accept="image/*" 
                         style="display: none;" onchange="handleSingleImageUpload(this)">
                </div>
              <% }) %>
              
              <!-- Empty slots for additional images -->
              <% for (let i = product.images.length; i < 3; i++) { %>
                <div class="image-slot empty" data-index="<%= i %>">
                  <div class="upload-placeholder" onclick="triggerUpload(this)">
                    <i class="fas fa-plus"></i>
                  </div>
                  <input type="file" class="single-image-input" name="images" accept="image/*" 
                         style="display: none;" onchange="handleSingleImageUpload(this)">
                </div>
              <% } %>
            </div>
          </div>

          <!-- Description -->
          <div class="form-group full-width">
            <label class="form-label">
              <i class="fas fa-align-left"></i>
              Product Description *
            </label>
            <textarea name="description" class="form-control" rows="5" 
                      placeholder="Enter detailed product description..." required><%= product.description %></textarea>
          </div>

          <!-- Form Actions -->
          <div class="form-actions">
            <a href="/products" class="btn btn-secondary">
              <i class="fas fa-times"></i>
              Cancel
            </a>
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-save"></i>
              Update Product
            </button>
          </div>
        </form>
      </section>
    </div>
  </main>

  <!-- Changes Indicator -->
  <div class="changes-indicator" id="changesIndicator">
    <i class="fas fa-exclamation-triangle"></i>
    <span>You have unsaved changes</span>
  </div>

  <!-- Enhanced Crop Modal -->
  <div class="modal" id="cropModal">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">
          <i class="fas fa-crop"></i>
          Crop Image
        </h3>
        <button class="modal-close" onclick="cancelCrop()">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="crop-container">
        <img id="cropImage" style="max-width: 100%;">
      </div>
      <div class="modal-actions">
        <button type="button" class="btn btn-secondary" onclick="cancelCrop()">
          <i class="fas fa-times"></i>
          Cancel
        </button>
        <button type="button" class="btn btn-primary" onclick="applyCrop()">
          <i class="fas fa-crop"></i>
          Apply Crop
        </button>
      </div>
    </div>
  </div>

  <script>
    let cropper;
    let currentUploadElement;
    let currentImageElement;
    let hasChanges = false;
    const changesIndicator = document.getElementById('changesIndicator');

    // Track form changes
    function trackChanges() {
      hasChanges = true;
      changesIndicator.classList.add('show');
    }

    // Add change listeners to form elements
    document.addEventListener('DOMContentLoaded', function() {
      const formElements = document.querySelectorAll('input, select, textarea');
      formElements.forEach(element => {
        element.addEventListener('change', trackChanges);
        element.addEventListener('input', trackChanges);
      });

      // Add loading animation
      const cards = document.querySelectorAll('.product-info-card, .form-section');
      cards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        setTimeout(() => {
          card.style.transition = 'all 0.6s ease';
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }, index * 100);
      });
    });

    // Trigger file input for empty slots
    function triggerUpload(element) {
      if (element.parentElement.classList.contains('empty')) {
        const fileInput = element.parentElement.querySelector('.single-image-input');
        fileInput.click();
      }
    }

    // Handle single image upload and open cropper
    function handleSingleImageUpload(input) {
      const file = input.files[0];
      if (!file) return;

      // Validate file type
      if (!file.type.startsWith('image/')) {
        Swal.fire({
          title: 'Invalid File Type',
          text: 'Please select a valid image file.',
          icon: 'error',
          confirmButtonColor: '#e74c3c'
        });
        return;
      }

      // Validate file size (5MB max)
      if (file.size > 5 * 1024 * 1024) {
        Swal.fire({
          title: 'File Too Large',
          text: 'Please select an image smaller than 5MB.',
          icon: 'error',
          confirmButtonColor: '#e74c3c'
        });
        return;
      }

      currentUploadElement = input.parentElement;
      currentImageElement = currentUploadElement.querySelector('img');
      openCropper(file);
    }

    // Replace existing image
    function replaceImage(button) {
      const imageSlot = button.closest('.image-slot');
      currentUploadElement = imageSlot;
      currentImageElement = imageSlot.querySelector('img');
      const fileInput = imageSlot.querySelector('.single-image-input');
      fileInput.click();
    }

    // Remove image
    function removeImage(button) {
      const imageSlot = button.closest('.image-slot');
      const existingImageInput = imageSlot.querySelector('input[name="existingImages[]"]');

      Swal.fire({
        title: 'Remove Image?',
        text: 'Are you sure you want to remove this image?',
        icon: 'question',
        showCancelButton: true,
        confirmButtonColor: '#e74c3c',
        cancelButtonColor: '#6c757d',
        confirmButtonText: 'Yes, remove it!'
      }).then((result) => {
        if (result.isConfirmed) {
          if (existingImageInput) {
            // Mark existing image for deletion
            const hiddenInput = document.createElement('input');
            hiddenInput.type = 'hidden';
            hiddenInput.name = 'deletedImages[]';
            hiddenInput.value = existingImageInput.value;
            document.getElementById('productForm').appendChild(hiddenInput);
          }

          // Convert to empty slot
          imageSlot.innerHTML = `
            <div class="upload-placeholder" onclick="triggerUpload(this)">
              <i class="fas fa-plus"></i>
            </div>
            <input type="file" class="single-image-input" name="images" accept="image/*" 
                   style="display: none;" onchange="handleSingleImageUpload(this)">
          `;
          imageSlot.classList.remove('filled');
          imageSlot.classList.add('empty');

          trackChanges();

          Swal.fire({
            title: 'Image Removed!',
            text: 'The image has been removed.',
            icon: 'success',
            timer: 1500,
            showConfirmButton: false
          });
        }
      });
    }

    // Open Cropper.js modal
    function openCropper(file) {
      const reader = new FileReader();
      reader.onload = function (e) {
        const cropImage = document.getElementById('cropImage');
        cropImage.src = e.target.result;
        document.getElementById('cropModal').style.display = 'flex';
        cropper = new Cropper(cropImage, {
          aspectRatio: 1,
          viewMode: 1,
          dragMode: 'move',
          autoCropArea: 0.8,
          restore: false,
          guides: false,
          center: false,
          highlight: false,
          cropBoxMovable: true,
          cropBoxResizable: true,
          toggleDragModeOnDblclick: false,
        });
      };
      reader.readAsDataURL(file);
    }

    // Apply cropped image
    function applyCrop() {
      const canvas = cropper.getCroppedCanvas({
        width: 400,
        height: 400,
        imageSmoothingEnabled: true,
        imageSmoothingQuality: 'high',
      });

      canvas.toBlob(blob => {
        const file = new File([blob], `product_${Date.now()}.jpg`, { type: 'image/jpeg' });
        const dataTransfer = new DataTransfer();
        dataTransfer.items.add(file);
        const fileInput = currentUploadElement.querySelector('.single-image-input');
        fileInput.files = dataTransfer.files;

        // Update UI
        const newImg = currentImageElement || document.createElement('img');
        newImg.src = canvas.toDataURL();

        if (!currentImageElement) {
          // Convert empty slot to filled slot
          currentUploadElement.innerHTML = `
            <img src="${newImg.src}" alt="Product Image">
            <div class="image-overlay">
              <button type="button" class="overlay-btn btn-edit-image" onclick="replaceImage(this)" title="Replace Image">
                <i class="fas fa-edit"></i>
              </button>
              <button type="button" class="overlay-btn btn-remove-image" onclick="removeImage(this)" title="Remove Image">
                <i class="fas fa-trash"></i>
              </button>
            </div>
            <input type="file" class="single-image-input" name="images" accept="image/*" 
                   style="display: none;" onchange="handleSingleImageUpload(this)">
          `;
          currentUploadElement.classList.remove('empty');
          currentUploadElement.classList.add('filled');
        }

        trackChanges();
        document.getElementById('cropModal').style.display = 'none';
        cropper.destroy();

        Swal.fire({
          title: 'Image Updated!',
          text: 'Product image has been updated successfully.',
          icon: 'success',
          timer: 1500,
          showConfirmButton: false
        });
      }, 'image/jpeg', 0.9);
    }

    function cancelCrop() {
      document.getElementById('cropModal').style.display = 'none';
      cropper.destroy();
      
      // Clear the file input
      const fileInput = currentUploadElement.querySelector('.single-image-input');
      fileInput.value = '';
    }

    // Form validation and submission
    document.getElementById('productForm').addEventListener('submit', function(e) {
      e.preventDefault();
      
      // Basic validation
      const requiredFields = this.querySelectorAll('[required]');
      let isValid = true;
      
      requiredFields.forEach(field => {
        if (!field.value.trim()) {
          isValid = false;
          field.focus();
          return false;
        }
      });
      
      if (!isValid) {
        Swal.fire({
          title: 'Missing Information',
          text: 'Please fill in all required fields.',
          icon: 'warning',
          confirmButtonColor: '#e74c3c'
        });
        return;
      }
      
      // Price validation
      const basePrice = parseFloat(this.querySelector('[name="price"]').value);
      const salePrice = parseFloat(this.querySelector('[name="discount"]').value);
      
      if (salePrice > basePrice) {
        Swal.fire({
          title: 'Invalid Pricing',
          text: 'Sale price cannot be higher than base price.',
          icon: 'error',
          confirmButtonColor: '#e74c3c'
        });
        return;
      }
      
      // Show loading and submit
      Swal.fire({
        title: 'Updating Product...',
        text: 'Please wait while we save your changes.',
        icon: 'info',
        allowOutsideClick: false,
        showConfirmButton: false,
        didOpen: () => {
          Swal.showLoading();
        }
      });
      
      hasChanges = false;
      changesIndicator.classList.remove('show');
      this.submit();
    });

    // Warn about unsaved changes when leaving
    window.addEventListener('beforeunload', function(e) {
      if (hasChanges) {
        e.preventDefault();
        e.returnValue = '';
      }
    });

    // Close modal on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && document.getElementById('cropModal').style.display === 'flex') {
        cancelCrop();
      }
    });
  </script>
</body>
</html>
